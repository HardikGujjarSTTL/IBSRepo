@model labInvoicelst

@{
    ViewData["Title"] = "Index";
}

<div class="list-inner">
    <div class="tast-list">
        <h2>Generate Invoice</h2>
    </div>
</div>

<div class="task-listinput">
    <div class="accordion-body">
        <div class="task-inner row">
            <div class="col-md-3 mb-3">
                <div class="reference">
                    <label for="Reference">From Date</label>
                    <input type="text" class="datepicker" id="FromDt" maxlength="100" style="text-transform: uppercase;" placeholder="DD/MM/YYYY">
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="reference">
                    <label for="Reference">To Date</label>
                    <input type="text" class="datepicker" maxlength="100" id="ToDt" style="text-transform: uppercase;" placeholder="DD/MM/YYYY">
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="reference">
                    <label for="Reference">Region</label>
                    @Html.DropDownList("InspRegion", new SelectList(IBS.Models.Common.InspRegion() , "Value", "Text"),"--Select--",new {@id="InspRegion"})
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row my-0">
            <div class="col-md-12 mb-4 text-center">
                <div class="savenext-btn">
                    <button type="button" class="save-btn active" onclick="BtnSubmit()">Submit</button>
                </div>
            </div>
        </div>
    </div>
    <div id="dvReportViewer"></div>
</div>

@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">

        let arrDigitalSign = [];
        var cnt = 0;
        var xmlLength = 0;

        function BtnSubmit() {
            var FromDate = $("#FromDt").val();
            var ToDate = $("#ToDt").val();
            var Region = $("#InspRegion").val();
            if (!Validation()) {
                ShowHideMsgNew(false, "All fields are mendatory.");
                return;
            }
            arrDigitalSign = [];
            cnt = 0;
            $.ajax({
                url: '@Url.Action("LabInvoiceList", "LabInvoice")?FromDate=' + FromDate + '&ToDate=' + ToDate + '&Region=' + Region,
                type: 'POST',
                cache: false,
                processData: false,
                contentType: false
            }).done(function (response) {
                if (response.status == 1) {
                    var listXml = response.list;
                    xmlLength = listXml.length;
                    console.log("XMLLenght = " + xmlLength);
                    if (listXml.length > 0) {
                        $(".overlayLoader").show();
                        for (var i = 0; i < listXml.length; i++) {
                            DigitalSign(listXml[i].Base64String, listXml[i].InvoiceNo);
                        }
                    }
                }
                else {
                    ShowHideMsgNew(false, "No Data Found");
                }
                $("#dvReportViewer").empty();
                $("#dvReportViewer").html(response);
            }).done(function (result) {
            });
        }

        async function DigitalSign(xmldata, InvoiceNo) {
            $(".overlayLoader").show();
            const result = await $.ajax({
                url: "http://127.0.0.1:1620",
                type: 'POST',
                data: { response: xmldata },
                success: function (exeResponse) {
                    var status = $(exeResponse).find("status").text();
                    var pdf = $(exeResponse).find("data").text();

                    if (status == "ok") {
                        pdf = $(exeResponse).find("data").text();
                        cnt = cnt + 1;
                        arrDigitalSign.push({ Base64String: pdf, InvoiceNo: InvoiceNo, InvoiceBillNo: InvoiceBillNo });
                        if (cnt == xmlLength) {
                            $.post("@Url.Action("UploadSignedPdf1", "LabInvoice")", { "model": arrDigitalSign }, function (exeResponse) { });
                            $(".overlayLoader").hide();
                            ShowHideMsg("success", "Digital signed successfully!!");
                        }
                        console.log(arrDigitalSign);
                        console.log(cnt);
                        console.log("===========OK=============");
                    }
                    else {
                        xmlLength = xmlLength - 1;
                        console.log(status);
                        console.log("PDF = " + xmldata);
                        console.log(InvoiceNo);
                        console.log("===========FAIL=============");
                    }
                },
            });
        }

        function Validation() {
            var type = false;
            if ($("#FromDt").val() && $("#ToDt").val() && $("#InspRegion").val()) {
                type = true;
            }
            return type;
        }

        function downloadPDF(pdf) {
            const linkSource = `data:application/pdf;base64,${pdf}`;
            const downloadLink = document.createElement("a");
            const fileName = "Ditital_Sign_Report.pdf";
            downloadLink.href = linkSource;
            downloadLink.download = fileName;
            downloadLink.click();
        }

    </script>
}