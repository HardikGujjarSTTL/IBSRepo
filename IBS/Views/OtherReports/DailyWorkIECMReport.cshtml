@model IBS.Models.Reports.DailyIECMWorkPlanReportModel
@{
    var IECMWise = "(IE Wise)";
    if (Model.CMWise.ToLower() == "true")
    {
        IECMWise = "(CM Wise)";
    }
}

<div style="margin-left:5px;margin-right:5px;">
    <h3 class="center">@Model.Regions</h3>

    <h3 class="heading3">IE Inspection Daily Work Plan Report @Model.FromDate To @Model.ToDate @IECMWise</h3>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="3%" valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">IE Name</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">CM Name</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Scheduled Visit Date</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Date & Time of Entry</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Case No.</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Call Date</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Desire Date</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Call SNo.</font></b></th>
                    <th width="4%" valign="top" align="center"><b><font size="1" face="Verdana">Master Checksheet Linked(Yes/No)</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Manufacturer</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">Place Of Inspection</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Manufacturer City</font></b></th>
                    <th width="14%" valign="top" align="center"><b><font size="1" face="Verdana">Item</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Value</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">Call Status</font></b></th>
                </tr>
                @if (Model != null && Model.lstDailyIECMWorkPlanReporttbl1 != null && Model.lstDailyIECMWorkPlanReporttbl1.Count > 0)
                {
                    var SrNo = 0;
                    @foreach (var item in Model.lstDailyIECMWorkPlanReporttbl1)
                    {
                        SrNo = SrNo + 1;
                        <tr>
                            <td valign="top" align="center"><font size="1" face="Verdana">@SrNo</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.IE_NAME</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.CO_NAME</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.VISIT_DATE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.LOGIN_TIME</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CASE_NO</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CALL_RECV_DATE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.DESIRE_DT</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CALL_SNO</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CHK_COUNT</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.MFG_NAME</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.MFG_PLACE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.MFG_CITY</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.ITEM_DESC_PO</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.VALUE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CALL_STATUS</font></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

