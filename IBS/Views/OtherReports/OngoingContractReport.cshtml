@model IBS.Models.Reports.OngoingContrcatsReportModel
<style>
    .borderTable th:nth-child(1){width:3%;}

    .borderTable th:nth-child(5), .borderTable th:nth-child(7), .borderTable th:nth-child(8), .borderTable th:nth-child(12) {
        width: 4.5%;
    }

    .borderTable th:nth-child(10){
        width: 5%;
    }
</style>
<div>
    @if (@Model.Region == "--Select--")
    {
        <h3 class="center">All Regions</h3>
    }
    else
    {
        <h3 class="center">@Model.Region</h3>
    }
    <h3 class="heading3">@Model.StatusOffertxt</h3>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Contract Id</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Client</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Contract No.</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Offer Date</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Scope of Work</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Period From</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Period To</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Rate of Insp Fee</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Contract Fee</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">CM Name</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Region</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Cont Special Condns</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">Contract Penalty</font></b></th>
                    <th valign="top" align="center"><b><font size="1" face="Verdana">File Uploaded(If Any)</font></b></th>
                </tr>
                @if (Model != null && Model.lstOngoingContrcats != null && Model.lstOngoingContrcats.Count > 0)
                {
                    var SrNo = 0;
                    @foreach (var item in Model.lstOngoingContrcats)
                    {
                        SrNo = SrNo + 1;
                        <tr>
                            <td valign="top" align="center"><font size="1" face="Verdana">@SrNo</font></td>
                            <td valign="top" align="Left"><font size="1" face="Verdana">@item.CONTRACT_ID</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CLIENT_NAME</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CONTRACT_NO</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.OFFER_DTE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.SCOPE_OF_WORK</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.PER_FROM</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.PER_TO</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CONT_INSP_FEE</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CONTRACT_FEE_NUM</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CO_NAME</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.REGION</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CONTRACT_SPECIAL_CONDN</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.CONTRACT_PANALTY</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana"></font></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


