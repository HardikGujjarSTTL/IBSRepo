@model IBS.Models.Reports.VendorPerformanceReportModel

<div>
    <h3 class="center">@Model.Region</h3>
    @if (@Model.monthtxt != null && @Model.monthtxt != "--Select--")
    {
        <h3 class="heading3">Vendor Performance For  : @Model.vendor <span class="orangeText"> (@Model.monthtxt , @Model.year) </span> (Based on Call Date)</h3>
    }
    else
    {
        <h3 class="heading3">Vendor Performance For  :  @Model.vendor <span class="orangeText"> During  @Model.FromDate To @Model.ToDate </span> (Based on Call Date)</h3>
    }
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="15%" valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th width="15%" valign="top" align="center"><b><font size="1" face="Verdana">PO No.</font></b></th>
                    <th width="15%" valign="top" align="center"><b><font size="1" face="Verdana">PO Date</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">Consignee</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Item Desc</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Call Dt</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">First Insp Dt</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Last Insp Dt</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Qty Offered</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Qty Passed</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Qty Rejected</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Rej Reason</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Call Status</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">IC No.</font></b></th>
                </tr>
                @if (Model != null && Model.lstVendorPerformance != null && Model.lstVendorPerformance.Count > 0)
                {
                    var SrNo = 0;
                    @foreach (var item in Model.lstVendorPerformance)
                    {
                        SrNo = SrNo + 1;
                        <tr>
                            <td width="15%" valign="top" align="center"><font size="1" face="Verdana">@SrNo</font></td>
                            <td width="15%" valign="top" align="Left"><font size="1" face="Verdana">@item.PO_NO</font></td>
                            <td width="15%" valign="top" align="center"><font size="1" face="Verdana">@item.PO_DATE</font></td>
                            <td width="7%" valign="top" align="center"><font size="1" face="Verdana">@item.CONSIGNEE</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.ITEM_DESC</font></td>
                            <td width="6%" valign="top" align="center"><font size="1" face="Verdana">@item.CALL_DATE</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.FIRST_INSP_DATE</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.LAST_INSP_DATE</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.QTY_TO_INSP</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.QTY_PASSED</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.QTY_REJECTED</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.REASON_REJECT</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.CALL_STATUS_DESC</font></td>
                            <td width="8%" valign="top" align="center"><font size="1" face="Verdana">@item.IC_NO</font></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


