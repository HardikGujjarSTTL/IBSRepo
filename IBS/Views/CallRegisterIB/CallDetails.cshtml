    <div class="accordion-body">
        <div class="row my-0">
            <div class="col-md-4 mb-3">
                <div class="reference">
                    <label for="Reference">Item SNo.</label>
                    @*<input type="text" class="input" asp-for="ItemSrNoPo" maxlength="100" style="text-transform: uppercase;">*@
