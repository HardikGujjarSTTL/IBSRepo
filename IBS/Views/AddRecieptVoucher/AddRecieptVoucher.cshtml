@model IBS.Models.AddRecieptVoucherModel

@{
    ViewData["Title"] = "Generate Voucher";
}

<div class="list-inner">
    <div class="tast-list">
        <h2>Generate Voucher</h2>
    </div>
</div>
<section class="table-section">
    <div class="task-listinput">
        <div class="accordion-body">
            <form data-ajax="true" asp-antiforgery="true" asp-controller="AddRecieptVoucher" asp-action="VoucherDetailsSave" data-ajax-method="post" data-ajax-complete="completed" id="frmVoucherDetails">
              
                <div class="accordion-body">
                    <div class="row my-0">
                        <div class="col-md-4 mb-4">
                            <label for="Reference">Voucher No</label>
                            <input type="text" asp-for="VCHR_NO" placeholder="Voucher No. will appear here." readonly="true" maxlength="300" />
                            
                        </div>

                        <div class="col-md-4 mb-4">
                            <label for="Reference">Voucher Date</label>
                            <input type="text" class="input datepicker" asp-for="VCHR_DT" maxlength="300" />
                            <span asp-validation-for="VCHR_DT" class="text-danger"></span>
                        </div>
                        <label for="Reference">Bank/Cash</label>
                        <select name="lstBank" asp-for="BANK_CD" maxlength="300">
                            <option value="0">0000-CASH</option>
                            <option value="85">2100-AXIS BANK, KOLKATA</option>
                            <option value="2">2100-STATE BANK OF INDIA</option>
                            <option value="87">2236-AXIS BANK, CHENNAI</option>
                            <option value="86">2300-AXIS BANK, GURGAON</option>
                            <option selected="selected" value="53">2319-AXIS BANK,GURGAON(N.R A/c)</option>
                            <option value="159">2333-AXIS BANK, BHILAI</option>
                            <option value="88">2483-AXIS BANK, MUMBAI</option>
                        </select>
                        <span asp-validation-for="BANK_CD" class="text-danger"></span>

                        <div class="col-md-4 mb-4">
                            <label for="Reference">Cheque No</label>
                            <input type="text" class="input" asp-for="CHQ_NO" >
                            <span asp-validation-for="CHQ_NO" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-4">
                            <label for="Reference">Cheque Date<span class="text-danger"> </label>
                            <input type="text" class="input datepicker" asp-for="CHQ_DT" mode maxlength="300" />
                            <span asp-validation-for="CHQ_DT" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-4">
                            <label for="Reference">Bank Name</label>
                            <div class="col-md-4 mb-3">
                                <label for="Bank Name">City</label>
                                @Html.DropDownListFor(model => model.BANK_NAME, Common.GetBank(), new { })
                                <span asp-validation-for="BANK_NAME" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 mb-4">
                            <label for="Reference">Amount</label>
                            <input type="text" class="input" asp-for="AMOUNT" maxlength="300" />
                            <span asp-validation-for="AMOUNT" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="Reference">Sample No</label>
                            <input type="text" class="input" asp-for="SAMPLE_NO" >
                            <span asp-validation-for="SAMPLE_NO" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="Reference">Account Code</label>
                           
                            <select name="ACC_CD" asp-for="ACC_CD" maxlength="300">
                                <option selected="selected" value="2709">Customer's Advances:2709</option>
                                <option value="2202">Fee Receivable Foreign Rly:2202</option>
                                <option value="2203">Fee Receivable Public Sector:2203</option>
                                <option value="2204">Fee Receivable Pvt. Sector:2204</option>
                                <option value="2205">Fee Receivable State Govt.:2205</option>
                                <option value="2222">INSPECTION FEE RECEIVABLE:2222</option>
                                <option value="2201">Inspct Fee Receivable Ind.Rly:2201</option>
                                <option value="2210">Lab Testing Fee Receivable (Internal):2210</option>
                                <option value="2212">Testing Charges (External):2212</option>
                                <span asp-validation-for="ACC_CD" class="text-danger"></span>
                            </select>
                        </div>  

                        <div class="col-md-4 mb-3">
                            <label for="Reference">Case No</label>
                            <input type="text" class="input" asp-for="CASE_NO">
                            <span asp-validation-for="CASE_NO" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="savenext-btn">
                        <a asp-controller="AddRecieptVoucher" asp-action="VoucherDetailsSave" class="reset-btn">Cancel</a>
                        <button type="button" class="save-btn active" onclick="Save();">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function Save() {
            if ($("#frmVoucherDetails").valid()) {
                $("#frmVoucherDetails").submit();
            }
        }
        completed = function (response) {
            var res = response.responseJSON;
            ShowHideMsgNew(res.status, res.responseText);
            window.location.href = "/AddRecieptVoucher/AddRecieptVoucher";
        };
    </script>
}