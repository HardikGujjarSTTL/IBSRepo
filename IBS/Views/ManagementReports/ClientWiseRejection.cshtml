@model IBS.Models.Reports.ClientWiseRejectionModel

<div style="margin-left:5px;margin-right:5px;">
    <h3 class="center">Rejection IC's of the Client : <span class="orangeText"> @Model.BPORailway</span>, for the Period : <span class="orangeText">@Model.Display_FromDate </span> TO <span class="orangeText">@Model.Display_ToDate </span> (Report Based on IC Date) </h3>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="4%" valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th width="12%" valign="top" align="center"><b><font size="1" face="Verdana">Vendor</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">PO NO.</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">PO Date</font></b></th>
                    <th width="19%" valign="top" align="center"><b><font size="1" face="Verdana">Item</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Qty Offered</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Qty Rejected</font></b></th>
                    <th width="13%" valign="top" align="center"><b><font size="1" face="Verdana">Reason For Rejection</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">IC Date</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">IE</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Book No.</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Set No.</font></b></th>
                </tr>
                @if (Model != null && Model.lstClientWiseRejection != null && Model.lstClientWiseRejection.Count > 0)
                {
                    @foreach (var item in Model.lstClientWiseRejection)
                    {
                        <tr>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.ID</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.Vendor.</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.PoNo</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.Display_PoDt</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.ItemDesc</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.QtyToInsp</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.QtyRejected</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.ReasonReject</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.Display_IcDt</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.IeName</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.BkNo</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.SetNo</font></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="noRecordGrid">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





