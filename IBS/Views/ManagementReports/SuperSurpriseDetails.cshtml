@model IBS.Models.Reports.SuperSurpriseDetailsModel

<div style="margin-left:5px;margin-right:5px;">
    <h3 class="center">Super Surprise Details : <span class="orangeText"> @Model.Display_FromDate </span> To <span class="orangeText">@Model.Display_ToDate </span> (@Model.Region)</h3>
    <h3 class="center">Note: For details of Super/Surprise inspection please refer Super/Surprise report format - F/8.2/2/4</h3>

    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="4%" valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Super Surprise No.</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Super Surprise Dt</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">CM</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">IE</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Vendor</font></b></th>
                    <th width="14%" valign="top" align="center"><b><font size="1" face="Verdana">Item</font></b></th>
                    <th width="6%" valign="top" align="center"><b><font size="1" face="Verdana">Scope of Sector Where Item is Covered</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Previous Internal/Consignee Rejections</font></b></th>
                    <th width="11%" valign="top" align="center"><b><font size="1" face="Verdana">Discrepancy if any</font></b></th>
                    <th width="11%" valign="top" align="center"><b><font size="1" face="Verdana">Overall outcome of the visit</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">SBU HEAD REMARKS/RECOMMENDATION</font></b></th>
                </tr>
                @if (Model != null && Model.lstSuperSurprise != null && Model.lstSuperSurprise.Count > 0)
                {
                    @foreach (var item in Model.lstSuperSurprise)
                    {
                        <tr>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.ID</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.SuperSurpriseNo</font></td>
                            <td valign="top" align="center"><font size="1" face="Verdana">@item.Display_SuperSurpriseDt</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.CoName</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.IeName</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.Vendor</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.ItemDesc</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.NameScopeItem</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.PreIntRej</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.Discrepancy</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.Outcome</font></td>
                            <td valign="top" align="left"><font size="1" face="Verdana">@item.SbuHeadRemarks</font></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="noRecordGrid">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





