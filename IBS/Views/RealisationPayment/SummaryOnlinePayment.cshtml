@model IBS.Models.SummaryOnlinePaymentModel
<div>
    <h3 class="center">Online Payment Gateway Details : <span class="orangeText"> @Model.Display_FromDate </span> To <span class="orangeText">@Model.Display_ToDate </span> (@Model.Region)</h3>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="1%" valign="top" align="center"><b><font size="1" face="Verdana">S.No.</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Merchant TXN Ref</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Order Info</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Transaction No.</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">RRN NO.</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Auth CD</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Case No.</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Call Dt</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Call Sno</font></b></th>
                    <th width="5%" valign="top" align="center"><b><font size="1" face="Verdana">Vendor</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Amount</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Charges Type</font></b></th>
                    <th width="2%" valign="top" align="center"><b><font size="1" face="Verdana">Status</font></b></th>
                    <th width="4%" valign="top" align="center"><b><font size="1" face="Verdana">DateTime</font></b></th>                    
                </tr>
                @if (Model != null && Model.lstOnlinePayment != null && Model.lstOnlinePayment.Count > 0)
                {
                    var SrNo = 0;
                    @foreach (var item in Model.lstOnlinePayment)
                    {
                        SrNo = SrNo + 1;
                        <tr>
                            <td width="1%" valign="top" align="center"><font size="1" face="Verdana">@SrNo</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.MER_TXN_REF</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.ORDER_INFO</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.TRANSACTION_NO</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.RRN_NO</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.AUTH_CD</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.CASE_NO</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.CALL_DT</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.CALL_SNO</font></td>
                            <td width="5%" valign="top" align="left"><font size="1" face="Verdana">@item.VENDOR</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@decimal.Truncate(Convert.ToDecimal(item.AMOUNT))</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.TYPE</font></td>
                            <td width="2%" valign="top" align="center"><font size="1" face="Verdana">@item.STATUS</font></td>
                            <td width="4%" valign="top" align="center"><font size="1" face="Verdana">@item.DATETIME</font></td>
                        </tr>
                    }                    
                }
                else
                {
                    <tr>
                        <td colspan="13" class="noRecordGrid">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>   
</div>