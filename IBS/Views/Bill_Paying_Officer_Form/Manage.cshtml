@model IBS.Models.Bill_Paying_Officer_FormModel

@{
    ViewData["Title"] = "Bill Paying Officer";
}
<div class="list-inner">
    <div class="tast-list">
        <h2>Bill Paying Officer</h2>
    </div>
</div>
<section class="table-section">
    <div class="task-listinput">
        <div class="accordion-body">
            <form data-ajax="true" asp-antiforgery="true" asp-controller="Bill_Paying_Officer_Form" asp-action="Bill_Paying_Officer_FormDetailsSave" data-ajax-method="post" data-ajax-complete="completed" id="frmBill_Paying_Officer_Form">
                <input type="hidden" asp-for="BpoCd" />
                <div class="accordion-body">
                    <div class="row my-0">
                        <div class="col-md-4 mb-3">
                            <label for="Reference">BPO Name</label>
                            <textarea class="input" asp-for="BpoName" maxlength="30"> </textarea>
                            <span asp-validation-for="BpoName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Reference">City</label>
                            <textarea class="input" asp-for="BpoCityCd" maxlength="30"> </textarea>
                            <span asp-validation-for="BpoCityCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row my-0">
                        <div class="col-md-4 mb-3">
                            <label for="Reference">GSTIN NO.</label>
                            <input type="text" class="input" asp-for="GstinNo" maxlength="30">
                            <span asp-validation-for="GstinNo" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="savenext-btn">
                        <a asp-controller="Bill_Paying_Officer_Form" asp-action="Index" class="reset-btn">Cancel</a>
                        <button type="button" class="save-btn active" onclick="Save();">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function Save() {
            if ($("#frmBill_Paying_Officer_Form").valid()) {
                $("#frmBill_Paying_Officer_Form").submit();
            }
        }
        completed = function (response) {
            var res = response.responseJSON;
            ShowHideMsgNew(res.status, res.responseText);
            window.location.href = "/Bill_Paying_Officer_Form/Index";
        };
    </script>
}