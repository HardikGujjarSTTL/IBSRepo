                            return '<a href="' + photoUrl + '" download target="_blank">' + fileName + '</a>';
                        }
                    },

                ],
                "order": [[0, "asc"]]
            });
        }

        function getFileNameFromUrl(url) {
            var parts = url.split('/');
            return parts[parts.length - 1]; // Get the last part (the file name)
        }

