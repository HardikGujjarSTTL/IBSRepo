}

<div>
    <div class="list-inner">
        <div class="tast-list">
            <h2>Purchase order submitted by vendors awaiting allocation of case number List</h2>
        </div>
        @*<div class="list-btn">
        <a asp-area="" asp-controller="UserAdministrator" asp-action="UserManage" class="formBtn"> Add New User</a>
        </div>*@
    </div>
    <section class="table-section">
        <div class="task-listinput">
            <div class="dash-table">
                <table id="dtList" class="table-responsive">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ref No.</th>
                            <th>Purchase Order Number</th>
                            <th>Purchase Order Date</th>
                            <th>Recv Date</th>
                            <th>Agency</th>
                            <th>Vendor</th>
                            <th>Place of Inspection</th>
                            <th>Region</th>
