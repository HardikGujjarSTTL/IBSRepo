            // var ForeignRailways = $("#chk4").val();
            // var PrivateSector = $("#chk5").val();
            // var TypeofOutStandingBills = $("#ddlTypeOutStandingBills").val();

            var BPOWiseOutstandingBillsModel = {
                FromDt: $("#fdt").val(),
                ToDt: $("#tdt").val(),
                BpoCd: $("#txtbpo").val(),
                BpoType: $("#ddlPClient").val(),
                BpoRly: $("#pclient").val(),
                BpoRegion: BpoRegion,
                Railway: $("#chk1").val(),
                PSU: $("#chk2").val(),
                StateGovt: $("#chk3").val(),
                ForeignRailways: $("#chk4").val(),
                PrivateSector: $("#chk5").val(),
                TypeofOutStandingBills: $("#ddlTypeOutStandingBills").val()
            };
            var url = '@Url.Action("GenerateReport", "BPOWiseOutstandingBills")';
            $.ajax({
                type: 'POST',
                contentType: "application/json",
                //: "/LabRegisterForm/SaveDataDetails",
                url: url,
                dataType: "json",
                data: JSON.stringify(BPOWiseOutstandingBillsModel),
                success: function (res) {

                //     if (res == true) {

                //         alert('Data Saved Successfully!');

