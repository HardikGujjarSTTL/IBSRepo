@using IBS.Helper;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/frontend/images/favicon.ico">
    <title>RITES Limited, A Government of India Enterprise</title>
    <link href="~/frontend/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="~/frontend/css/font-awesome.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link href="~/frontend/css/front-style.css" type="text/css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="description" content="RITES Limited, A Government of India Enterprise" />
    <script type="text/javascript" src="~/frontend/js/modernizr.js"></script>
    <script type="text/javascript" src="~/frontend/js/jquery-min.js"></script>
</head>

<body class="noJS">
    <div class="wrapper">
        <header id="header">
            <div class="headerRow">
                <div class="container">
                    <div class="logoRow">
                        <div class="row m-0">
                            <div class="col-lg-6 col-md-12">
                                <div class="mainLogo">
                                    <a asp-action="Index" asp-controller="Fhome" title="RITES Limited, A Government of India Enterprise"><img src="~/frontend/images/rites-logo.png" alt="RITES Limited, A Government of India Enterprise" /></a>
                                    <div class="brandDetail"> <span class="firstTitle">Quality Assurance Division</span> <span class="secondTitle">(A Government of India Enterprise)</span> <span class="secondTitle">An ISO 9001 Company/Accreditation to ISO/IEC 17020</span> </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="">
                                    <ul class="rightLinks">
                                        <li class="helpLineNumber">National Helpline Number <span>1800 425 7000 (TOLL FREE)</span> </li>
                                        <li class="langSelectBoxIn">
                                            <label for="languages" id="languageSelection">Language</label>
                                            <select name="Languages" id="languages" title="Select Language" class="">
                                                <option selected="selected" value="">English</option>
                                                <option value="">हिन्दी</option>
                                            </select>
                                            <input type="submit" name="btnSearchLng" value="Go" id="btnSearchLng" class="goButton">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mainNavigationWrap">
                <div class="container">
                    <div id="mainNav" class="mainNavigation">
                        <div class="menuPart cf">
                            <ul id="nav">
                                <li><a asp-action="Index" asp-controller="Fhome">Home</a></li>
                                <li>
                                    <a href="#" title="About Us">About Us</a>
                                    <ul>
                                        <li><a asp-action="QaDivisionProfile" asp-controller="AboutUs">QA Division Profile</a></li>
                                        <li><a asp-action="ServiceSpectrum" asp-controller="AboutUs">Service Spectrum</a></li>
                                        <li><a asp-action="Resources" asp-controller="AboutUs">Resources</a></li>
                                        <li><a asp-action="OurClients" asp-controller="AboutUs">Our Clients</a></li>
                                        <li><a asp-action="OurCommittment" asp-controller="AboutUs">Our Commitments</a></li>
                                    </ul>
                                </li>
                                <li><a href="#" title="Admin">Admin</a></li>
                                <li>
                                    <a href="#" title="Client">Client</a>
                                    <ul>
                                        <li><a asp-action="Index" asp-controller="ClientFeedback">Client Feedback</a></li>
                                    </ul>
                                    <ul>
                                        <li><a asp-action="Index" asp-controller="OnlineComplaints">Register Online Rejection</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#" title="Vendor">Vendor</a>
                                    <ul>
                                        <li><a asp-action="Index" asp-controller="VendorFeedback">Vendor Feedback</a></li>
                                    </ul>
                                </li>
                                <li><a href="#" title="Inspection engineer Interface">Inspection engineer Interface</a></li>
                                <li><a href="#" title="Quick Links">Quick Links</a></li>
                                <li><a href="#" title="Miscellaneous">Miscellaneous</a></li>
                                <li><a href="#" title="Contact Us">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
       @* <div class="container">
            <div class="innerContent">
                
                
            </div>

        </div>*@
        <div class="ourClientSection">
            <div class="container">
                <div class="ourClientWrap">
                    <h2 class="text-center">Our Clients</h2>
                    <div class="ourClientSlider">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/01-indian-railways.jpg" alt="Indian Railways" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/02-dedicated-freight-corridor.jpg" alt="Dedicted Freight Corridor" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/03-dmrc.jpg" alt="Delhi Metro Rail Corporation" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/04-indian-railway-cofmow.jpg" alt="Indian Railway, COFMOW" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/05-central-organization-for-railway-electrification.jpg" alt="Central Organization for Railway Electrification" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/06-rail-vikas-nigam-limited.jpg" alt="Rail Vikas Nigam Limited" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/07-rail-coach-factory-kapurthala.jpg" alt="Rail Coach Factory, Kapurthala" /> </div>
                                </div>
                                <div class="swiper-slide">
                                    <div class="ourClientImageBox"> <img src="~/frontend/images/08-modern-coach-factory-raebareli.jpg" alt="Modern Coach Factory, Raibareli" /> </div>
                                </div>
                            </div>
                        </div>
                        <!--<div class="ourClientSlider-prev sliderSmallArrow" role="button" aria-label="Previous slide" tabindex="0"><img src="~/frontend/images/slider-left-arrow.png" alt="Left Arrow" /> </div>
                        <div class="ourClientSlider-next sliderSmallArrow" role="button" aria-label="Next slide" tabindex="0"><img src="~/frontend/images/slider-right-arrow.png" alt="Right Arrow" /> </div>-->
                    </div>
                </div>
            </div>
        </div>
        <div class="footerStrip">
            <div class="container">
                <p>Copyright © 2023 RITES IT Division, Northern Region</p>
            </div>
        </div>

    </div>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript" src="~/frontend/js/bootstrap.min.js"></script>
    <noscript class="displayNone">
    </noscript>
    <script type="text/javascript" src="~/frontend/js/functions.js"></script>
    <noscript class="displayNone">
    </noscript>
    <script type="text/javascript" src="~/frontend/js/general.js"></script>
    <noscript class="displayNone">
    </noscript>

</body>

</html>
