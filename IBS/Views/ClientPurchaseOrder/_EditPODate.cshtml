@model IBS.Models.AdministratorPurchaseOrderModel
<div class="modal-dialog modal-lg" role="document">
    <input type="hidden" asp-for="CaseNo" />
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">EDIT PURCHASE ORDER DATE</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <label for="Reference">Case Number</label>
                    <input type="text" class="input" asp-for="CaseNo" readonly>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Reference">PO Date</label>
                    <input type="text" class="input" asp-for="PoDt" readonly>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Reference">New Day of PO Date</label>
                    <input id="PoDtNew" asp-for="PoDtNew" type="text" class="datepicker" placeholder="dd-MM-yyyy" readonly="readonly" />

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="savenext-btn">
                <button type="button" class="reset-btn" data-bs-dismiss="modal">Close</button>
                <button class="save-btn active" id="btnUpdatePODate" onclick="UpdatePODate()">Save</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#PoDtNew').datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: 'dd-mm-yy',
    });
</script>