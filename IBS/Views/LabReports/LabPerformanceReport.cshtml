@model IBS.Models.LabReportsModel

<div>
    <h3 class="center">(@ViewBag.Region)</h3>


    <h3 class="center">Lab Performance Report For The Period: <span class="orangeText"> @ViewBag.From </span> To <span class="orangeText">@ViewBag.To </span>(Based on Sample Registration Date)</h3>

    <br>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>

                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">S.No.</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">LAB</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">NO.OF TEST</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">No.Of Samples</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">No. Of Failures</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">No. Of Fail Samples</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">No. Of No Comments</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Maximum Testing Days</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Minimum Testing Days</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Average Testing Days</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Total Fees</font></b></th>
                    

                </tr>
                @if (Model != null && Model.lstLabReport != null && Model.lstLabReport.Count > 0)
                {
                    var serialNumber = 1;
                    @foreach (var item in Model.lstLabReport)
                    {

                        <tr>
                            <td width="3%" valign="top" align="center"><font size="1" face="Verdana">@serialNumber</font></td>
                            <td width="25%" valign="top" align="left">
                                <font size="1" face="Verdana">
                                    @item.LAB
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.NO_OF_TEST
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.NO_OF_SAMPLES
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.NO_OF_FAILURE
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.NO_OF_FAIL_SAMPLES
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.NO_OFNOCOMMENTS
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.MAXM_DAYS
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.MIN_DAYS
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.AVG_DAYS
                                </font>
                            </td>
                            <td width="25%" valign="top" align="right">
                                <font size="1" face="Verdana">
                                    @item.TOTAL_FEE
                                </font>
                            </td>
                            
                        </tr>
                        serialNumber++;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="10" style="text-align:center; background: #f1f1f1 !important;"><font size="1" face="Verdana">No records found</font></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


