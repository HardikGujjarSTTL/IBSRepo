<section class="@clsView">
    <div class="task-listinput">
        <div class="accordion-body">
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <label for="Reference">Case No.</label>
                    <input type="text" class="input" readonly="readonly" id="lblcno">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Reference">Call Date & Sno</label>
                    <input type="text" class="input" readonly="readonly" id="lblCallDT">

                </div>
                <div class="col-md-4 mb-3" style="margin-top:auto;">

                    <input type="text" class="input" readonly="readonly" id="lblCallSno">
                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-8 mb-3">
                    <label for="Reference">Vendor</label>
                    <input type="text" class="input" readonly="readonly" id="lblVend">
                </div>
                <div class="col-md-4 mb-3" style="margin-top:auto;">

                    <input type="hidden" class="input" readonly="readonly" id="lblVENDCD">
                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-8 mb-3">
                    <label for="Reference">IE</label>
                    <input type="text" class="input" readonly="readonly" id="lblIE">
                </div>
                <div class="col-md-4 mb-3">

                    <input type="hidden" class="input" readonly="readonly" id="lblIECD">

                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-3 mb-3">
                    <label for="Reference">Net Testing Charges Paid <i class="text-danger">*</i></label>
                    <input type="text" class="input" id="txttesfee">
                </div>
                <div class="col-md-3 mb-3">
                    <label for="Reference">TDS (If Any) <i class="text-danger">*</i></label>
                    <input type="text" class="input" id="txttdsany">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="Reference">UTR NO <i class="text-danger">*</i></label>
                    <input type="text" class="input" id="txtutrno">
                </div>
                <div class="col-md-3 mb-3">
                    <label for="Reference">UTR Date <i class="text-danger">*</i></label>
                    <input type="text" class="input datepicker" id="dtutr">
                </div>
            </div>
            <div class="row my-0">

                <div class="col-md-4 mb-3" id="lblfile">
                    <label for="Reference">Upload Payment Report(In PDF Only)</label>
                    <input type="file" name="fileUpload" id="upload" enctype="multipart/form-data" />

                </div>
                <div class="col-md-4 mb-3">
                    <a id="download" href="javascript:void(0);" style="display:none;"></a>
                </div>
                <div class="col-md-4 mb-3" style="margin-left:auto">
                    <label for="Reference">Payment Status By Finance (RITES)</label>
                    <input type="text" class="input" id="lblpstatus" readonly="readonly">

                </div>
            </div>
            <div id="approval" style="display:none">
                <div class="row my-0">
                    <div class="col-md-3 mb-3">
                        <label for="Reference">Date of Receipt of Sample</label>
                        <input type="text" class="input" id="dtrecsample" readonly="readonly">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Reference">Total Testing Fee</label>
                        <input type="text" class="input" id="txttfee" readonly="readonly">

                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Reference">Likely Date of Test Report</label>
                        <input type="text" class="input" id="dtltestreport" readonly="readonly">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Reference">Status</label>
                        <select class="input" id="ddlstatus" disabled>
                            <option value="S">Sample Received</option>
                            <option value="C">Lab Report under Compilation</option>
                            <option value="U">Lab Report Uploaded</option>
                            <option value="O">Others</option>
                        </select>
                    </div>
                </div>
                <div class="row my-0">
                    <div class="col-md-8 mb-3">
                        <label for="Reference">Remarks</label>
                        <textarea id="txtremarks" rows="4" cols="50" readonly="readonly"></textarea>
                    </div>
                </div>
            </div>
            <div class="savenext-btn" style="margin-left:47%;">
                <button type="button" class="save-btn active Permission_Save" onclick="SaveDetails();" id="btnsave">Save</button>
                <button type="button" class="save-btn active Permission_EditView" style="display:none;" onclick="UpdateDetails();" id="btnupdate">Update</button>
            </div>
        </div>
    </div>

    <br />
</section>
