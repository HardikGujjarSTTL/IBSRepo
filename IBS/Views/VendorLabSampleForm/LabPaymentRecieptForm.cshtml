        function LoadSampleDtl() {

            var CaseNo = '@ViewBag.CaseNo';
            var CallRdt = '@ViewBag.CallRdt';
            var CallSno = '@ViewBag.Sno';
            var url = '@Url.Action("SampleDtlData", "VendorLabSampleForm")';
            $.ajax({
                //url: '/VendorLabSampleForm/SampleDtlData',
                url:url,
                type: "POST",
                dataType: "JSON",
                data: { CaseNo: CaseNo, CallRdt: CallRdt, CallSno: CallSno },

                success: function (success) {

                    if (success.UTRDT != null && success.UTRDT != "") {

                        var originalDateStr = success.UTRDT;

                        var dateParts = originalDateStr.split(' ');
                        var datePart = dateParts[0];
                        var timePart = dateParts[1];

                        var dateComponents = datePart.split('/');
                        var day = dateComponents[0];
                        var month = dateComponents[1];
                        var year = dateComponents[2];

                        var convertedDateStr = day + "/" + month + "/" + year;

                        $("#dtutr").val(convertedDateStr);
                        $("#lblpstatus").val(success.PaymentStatus);
                        $("#btnsave").css("display", "none");
                        $("#btnupdate").css("display", "");
                        var firstPart = success.PaymentStatus.substring(0, success.PaymentStatus.indexOf(" "));
                        debugger;
                        if (success.File != "False") {
                            $("#download").text(success.FileNm);
                            // $("#HyperLink1").val(success.FileNm);
                            var pdfUrl = success.FileLink;
                            sessionStorage.setItem("link", pdfUrl);
                            $("#download").css("display", "");
                        }
                     
                        if (firstPart == 'APPROVED') {
                            $("#upload").css("display", "none");
                            
                            $("#btnupdate").css("display", "none");
                            if (success.LabelExist != "S") {
                               $("#lblfile").css("display", "none");
                                $("#approval").css("display", "");
                            }
                            

                        }

                    }
                    else {
                        $("#dtutr").val('');
                    }

                    $("#lblcno").val(success.CaseNo);
                    $("#lblCallDT").val(success.CallRecDt);
                    $("#lblCallSno").val(success.CallSNO);
                    $("#lblVend").val(success.VendorName);
                    $("#lblIE").val(success.IEName);
                    $("#txttesfee").val(success.NetTesting);
                    $("#txttdsany").val(success.TDS);
                    $("#txtutrno").val(success.UTRNO);
                    $("#dtrecsample").val(success.DateofRecSample);
                    $("#txttfee").val(success.TotalTFee);
                    $("#dtltestreport").val(success.LikelyDt);
                    $("#ddlstatus").val(success.Status);
                    $("#txtremarks").val(success.Remarks);


                    sessionStorage.setItem("IEcode", success.IE);

                }

            });
