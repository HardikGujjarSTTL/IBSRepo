        $("#btnCaseHistory").click(function () {
            var CaseNo = $("#CASE_NO").val();
            var MaNo = $("#MA_NO").val();
            var MaDt = $("#MA_DT").val();

            var urlParams = new URLSearchParams(window.location.search);
            var MaStatus = urlParams.get('MaStatus');
            var MaSNo = urlParams.get('MaSNo');

            $.ajax({
                url: '@Url.Action("GetMatch", "VendorPOMA")',
                type: "GET",
                dataType: "JSON",
                data: { "CaseNo": CaseNo },
                success: function (contacts) {
                    if (contacts.data && contacts.data.length > 0) {
                        var VendCd = contacts.data[0].VEND_CD;
                        var VEND_CD_S = contacts.data[0].VEND_CD_S;
                        var Check = "";
                        if (VendCd == "") {
                            Check = "0";
                            alert('ENTERED CASE NUMBER DOES NOT MATCH!!!');
                        }
                        else if (VendCd == VEND_CD_S) {
                            Check = "2";
                        }
                        else {
                            Check = "1";
                            alert('You Are Not Authorised to Update/Delete Purchase Order of Other Vendors!!!');
                            return;
                        }
                        if (Check == "2") {
                            window.location.href = '@Url.Action("CaseHistoryReport", "VendorPOMA")' + '?CaseNo=' + CaseNo + "&MaNo=" + MaNo + "&MaDt=" + MaDt + "&MaStatus=" + MaStatus + "&MaSNo=" + MaSNo;
                        }

                    }
                    else {
                        alert('You Are Not Authorised to Update/Delete Purchase Order of Other Vendors!!!');
                    }
                }
            });
        });

        function GetMatch() {
            var CaseNo = $("#CASE_NO").val();
            $.ajax({
                url: '@Url.Action("GetMatch", "VendorPOMA")',
                type: "GET",
                dataType: "JSON",
                data: { "CaseNo": CaseNo },
                success: function (contacts) {
                    if (contacts.data && contacts.data.length > 0) {
                        var VendCd = contacts.data[0].VEND_CD;
                        var VendCdS = contacts.data[0].VEND_CD_S;

                        var Check = "";
                        if (VendCd == "") {
                            Check = "0";
                            alert('ENTERED CASE NUMBER DOES NOT MATCH!!!');
                        }
                        if ($.trim(VendCd) == $.trim(VendCdS)) {
                            Check = "2";
                        }
                        else {
                            Check = "1";
                            alert('You Are Not Authorised to Update/Delete Purchase Order of Other Vendors!!!');
                            return;
                        }
                        if (Check == "2") {
                            window.location.href = '@Url.Action("Manage", "VendorPOMA")' + '?CaseNo=' + CaseNo + "&Action_T=N";
                        }

                    }
                    else {
                        alert('You Are Not Authorised to Update/Delete Purchase Order of Other Vendors!!!');
                    }
                }
            });
        }

        function setDefaultDate() {
            $('#PoDt').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-mm-yy',
            });
            $('#MaDt').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-mm-yy',
            });
        }

        function MaStatus() {
            var urlParams = new URLSearchParams(window.location.search);
            var MaStatus = urlParams.get('MaStatus');

            if (MaStatus == "Return") {
                $("#btnAddMA").hide();
                $("#btnModifyPO").hide();
                $("#btnDeletePO").show();
            }
            else if (MaStatus == "Pending") {
                $("#btnAddMA").hide();
                $("#btnModifyPO").show();
                $("#btnDeletePO").hide();
            }
            else {
                $("#btnAddMA").show();
                $("#btnModifyPO").hide();
                $("#btnDeletePO").hide();
                alert("Already Aprroved!!!");
            }
            //else if (MaStatus == "Approved") {
            //    $("#btnAddMA").show();
            //    $("#btnModifyPO").hide();
            //    $("#btnDeletePO").hide();
            //    alert("Already Aprroved!!!");
            //}
        }

        function InitializeDatatable() {
            var CaseNo = $("#CASE_NO").val();
            var PoNo = $("#PO_NO").val();
            var PoDt = $("#PO_DT").val();
            var MaNo = $("#MA_NO").val();
            var MaDt = $("#MA_DT").val();

            $("#dtList").DataTable({
                stateSave: false,// Design Assets
                autoWidth: true,
                scrollX: true,
                scrollCollapse: true,
                processing: true, // ServerSide Setups
                serverSide: true,
                destroy: true,
                paging: true,// Paging Setups
                searching: true,// Searching Setups
                ajax: {// Ajax Filter
                    url: "@Url.Action("LoadTable", "VendorPOMA")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        var AdditionalValues = {
                            "CaseNo": CaseNo,
                            "PoNo": PoNo,
                            "PoDt": PoDt,
                            "MaNo": MaNo,
                            "MaDt": MaDt
                        };
                        d.AdditionalValues = AdditionalValues;
                        return JSON.stringify(d);
                    }
                },

                columns: [// Columns Setups
                    {
                        data: '', orderable: false, width: '5%',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { data: "CASE_NO" },
                    { data: "PO_NO" },
                    {
                        data: "PO_DT",
                        render: function (data, type, row) {
                            if (type === "display" || type === "filter") {// If display or filter data is requested, format the date
                                return data != null && data != "" ? moment(data).format("DD-MM-YYYY") : "";
                            }
                            return data;
                        }
                    },
                    { data: "MA_NO" },
                    {
                        data: "MA_DT",
                        render: function (data, type, row) {
                            if (type === "display" || type === "filter") {// If display or filter data is requested, format the date
                                return data != null && data != "" ? moment(data).format("DD-MM-YYYY") : "";
                            }
                            return data;
                        }
                    },

                    { data: "RLY_CD" },
                    { data: "PO_OR_LETTER" },
                    { data: "MA_SNO" },
                    { data: "MA_FIELD" },
                    { data: "MA_STATUS" },
                    { data: "S_RCE" },
                    {
                        data: null, orderable: false,
                        render: function (data, type, row) {
                            var CaseNo = data.CASE_NO;
                            var MaNo = data.MA_NO;
                            var MaDt = moment(data.MA_DT).format("DD/MM/YYYY");
                            var MaStatus = data.MA_STATUS;
                            var MaSNo = data.MA_SNO;
                            var editUrl = '@Url.Action("Index", "VendorPOMA")?CaseNo=' + CaseNo + "&MaNo=" + MaNo + "&MaDt=" + MaDt + "&MaStatus=" + MaStatus + "&MaSNo=" + MaSNo;
                            var html = '<div align=\"center\" class=\"reportIcon\"> <a href=\"' + editUrl + '\" class=\"edit\"><i class=\"fa fa-eye\" title="Edit"></i></a>';
                            html += '</div>';
                            return html;
                        }
                    },

                ],
                "order": [[0, "asc"]]

            });

        }

        $("#btnAddMA").click(function () {
            GetMatch();
        });

        $("#btnModifyPO").click(function () {
            var CaseNo = $("#CASE_NO").val();
            var MaNo = $("#MA_NO").val();
            var MaDt = $("#MA_DT").val();
            
            var urlParams = new URLSearchParams(window.location.search);
            var MaStatus = urlParams.get('MaStatus');
            
            $.ajax({
                url: '@Url.Action("GetMatchModify", "VendorPOMA")',
                type: "GET",
                dataType: "JSON",
