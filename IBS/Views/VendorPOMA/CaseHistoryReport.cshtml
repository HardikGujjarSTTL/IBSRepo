            $("#lblVendor").text(Vendor);
            $("#lblPoNo").text(PoNo);
            var SetPoDt = formatToDDMMYYYY(PoDt);
            $("#lblPoDt").text(SetPoDt);
            $("#lblClient").text(RlyCd);

            var po_yr = extractYearFromDateStr(PoDt);
            var rly_cd = ImmsRlyCd;
            var po_no = PoNo;
            var linkUrl = 'https://www.ireps.gov.in/ireps/etender/pdfdocs/MMIS/PO/' + po_yr + '/' + rly_cd + '/' + po_no + '.pdf';
            $('#viewPoLink').attr('href', linkUrl);


            var PORemark = $("#REMARKS").val();
            var VendorRemark = $("#VEND_REMARKS").val();
            if (PORemark == null || PORemark == "") {
                $("#lblPORemark").text("Nil");
            }
            else {
                $("#lblPORemark").text(PORemark);
            }
            if (VendorRemark == null || VendorRemark == "") {
                $("#lblVendorRemark").text("Nil");
            }
            else {
                $("#lblVendorRemark").text(PORemark);
            }
        }

        function formatToDDMMYYYY(dateStr) {
            var formattedDate = moment(dateStr, "DD-MM-YYYY HH:mm:ss").format("DD/MM/YYYY");
            return formattedDate;
        }

        function formatToYYYYMMDD(dateStr) {
            var formattedDate = moment(dateStr, "YYYY-MM-DD HH:mm:ss").format("YYYYMMDD");
            return formattedDate;
        }

        function extractYearFromDateStr(dateStr) {
            var parts = dateStr.split(" ");
            var datePart = parts[0];
            var year = datePart.split("-")[2];
            return year;
        }

