@model IBS.Models.VendorPOMAModel
@{
    ViewData["Title"] = "AMMENDMENT FORM";
}

<form data-ajax="true" asp-antiforgery="true" asp-controller="VendorPOMA" asp-action="DetailsSave" data-ajax-method="post" data-ajax-complete="completed" id="frmDetails">
    <div class="center">
        <div class="tast-list">
            <h3>History for Case No. - <label id="lblTitleCaseNo"></label></h3>
            <h4><u>PO DETAILS</u></h4>
        </div>
        <input type="hidden" asp-for="CASE_NO" />
        <input type="hidden" asp-for="VENDOR" />
        <input type="hidden" asp-for="PO_NO" />
        <input type="hidden" asp-for="PO_DT" />
        <input type="hidden" asp-for="RLY_CD" />
        <input type="hidden" asp-for="REMARKS" />
        <input type="hidden" asp-for="VEND_CD" />
        <input type="hidden" asp-for="IMMS_RLY_CD" />
        <input type="hidden" asp-for="PO_SOURCE" />
        <input type="hidden" asp-for="VEND_REMARKS" />
        <div class="right">
            <button type="button" class="save-btn" id="btnBack">Go Back</button>
        </div>
    </div>


    <table border="1" width="100%" bgcolor="#D9C9FF">
        <tr>
            <td valign="top"><font size="1" face="Verdana" color="dark blue">Case No. <label id="lblCaseNo"></label></font></td>
            <td valign="top"><font size="1" face="Verdana" color="dark blue">Vendor: <label id="lblVendor"></label></font></td>
        </tr>
        <tr>
            <td valign="top"><font size="1" face="Verdana" color="dark blue">PO No. <label id="lblPoNo"></label>, Dated : <label id="lblPoDt"></label></font></td>
            <td valign="top"><font size="1" face="Verdana" color="dark blue">Client: <label id="lblClient"></label></font></td>
        </tr>
    </table>

    <section class="table-section">
        <div class="task-listinput">
            <div class="dash-table">
                <table id="dtListPODetails" class="table-responsive">
                    <thead>
                        <tr>
                            <th>Item Srno</th>
                            <th>Item Description</th>
                            <th>Qty Ordered</th>
                            <th>Qty Passed</th>
                            <th>Qty Rejected</th>
