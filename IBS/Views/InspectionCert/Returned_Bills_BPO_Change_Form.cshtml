@model IBS.Models.InspectionCertModel

@{
    ViewData["Title"] = "Returned Bills Change BPO in Bill";
}
<div class="list-inner">
    <div class="tast-list">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="task-listinput">
    <form role="form" asp-controller="InspectionCert" asp-action="Returned_Bills_BPO_Change_Form" id="frmDetails">
        <input type="hidden" asp-for="RecipientGstinNo" />
        <input type="hidden" asp-for="UpdateStatus" />

        <div class="accordion-body" style="overflow-x: auto;">
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Caseno">Bill No.</label>
                        <input type="text" class="input" asp-for="BillNo" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Caseno">Case No.</label>
                        <input type="text" class="input" asp-for="Caseno" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Bkno">BK No.</label>
                        <input type="text" class="input" asp-for="Bkno" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Setno">Set No.</label>
                        <input type="text" class="input" asp-for="Setno" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
            </div>

            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="BpoName">Existing BPO In IC</label>
                        <input type="text" class="input" asp-for="BpoName" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Consignee">Exisiting AU</label>
                        <input type="text" class="input" asp-for="OldAu" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Consignee">Exisiting Consignee In IC</label>
                        <input type="text" class="input" asp-for="Consignee" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="ConsigneeCd">IRFC Funded</label>
                        @Html.DropDownListFor(model => model.IrfcFunded, new SelectList(IBS.Models.Common.OnlineCallStatus() , "Value", "Text"))
                        <span id="spnConsigneeCd" class="darkRedBoldText"></span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="Caseno">Recipient GSTIN No.</label>
                    <div class="custom-readio">
                        <div class="company-checkbox">
                            <div class="remember">
                                <div class="remecheckbox">
                                    <ul class="radioListForm">
                                        <li>
                                            <input type="radio" asp-for="GSTINCall" name="GSTINCall" value="C" id="GSTINCall_C" />
                                            <label for="GSTINCall_C">Consignee GSTIN</label>
                                        </li>

                                        <li>
                                            <input type="radio" asp-for="GSTINCall" name="GSTINCall" value="B" id="GSTINCall_D" />
                                            <label for="GSTINCall_D">BPO GSTIN</label>
                                        </li>
                                        <li>
                                            <input type="radio" asp-for="GSTINCall" name="GSTINCall" value="I" id="GSTINCall_I" />
                                            <label for="GSTINCall_I">IRFC GSTIN</label>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="ConsigneeCd">IRFC BPO</label>
                        @Html.DropDownListFor(model => model.IrfcBpo, new SelectList(IBS.Models.Common.GetBPOList() , "Value", "Text"))
                        <span id="spnConsigneeCd" class="darkRedBoldText"></span>
                    </div>
                </div>
            </div>

            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Reference">Replace with BPO.</label>
                        <input type="text" class="input" asp-for="BpoCd" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
                <div class="col-md-4 mb-3" style="margin-top: 30px;">
                    <div class="reference">
                        @Html.DropDownListFor(model => model.Bpo, new SelectList(IBS.Models.Common.GetBPOList(Model.BpoCd) , "Value", "Text"))
                    </div>
                </div>
            </div>
            <div class="row my-0">
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="ConsigneeCd">New AU</label>
                        <input type="text" class="input" asp-for="Au" maxlength="100" style="text-transform: uppercase;" readonly>
                        <span id="spnConsigneeCd" class="darkRedBoldText"></span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="reference">
                        <label for="Reference">Invoice Recipient GSTIN No.</label>
                        <input type="text" class="input" asp-for="GstinNo" maxlength="100" style="text-transform: uppercase;" readonly>
                    </div>
                </div>
            </div>

            <div class="alert alert-warning center">
                Plz Make Sure that you have choosen the correct Consignee Before Proceeding!!!
                <div class="reference">
                    <span id="spnMessage" style="color:#d52127;"></span>
                </div>
            </div>
            <div class="row my-0 center">
                <div class="col-md-12">
                    <button type="button" class="commonBtn" id="btnSave" onclick="UpdateDetails();" style="display:none;">Update Consignee in IC</button>
                    <a asp-controller="InspectionCert" asp-action="Index" class="reset-btn">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {

            var IrfcFunded = $("#IrfcFunded").val();
            var AccGroup = $("#AccGroup").val();
            if (IrfcFunded == "Y") {
                $("input[name='GSTINCall'][value='I']").prop("checked", true);
            }
            else {
                if (AccGroup == "Z007") {
                    $("input[name='GSTINCall'][value='C']").prop("checked", true);
                }
                else if (AccGroup == "Z006") {
                    $("input[name='GSTINCall'][value='B']").prop("checked", true);
                }
            }
            $('input[name=GSTINCall]').attr("disabled", true);

            var UpdateStatus = $("#UpdateStatus").val();
            if (UpdateStatus == "1") {
                $("#btnSave").hide();
                $("#spnMessage").html("This Bill is not returned by Railways, so you cannot change BPO from this Form.");
            }
            else {
                $("#btnSave").show();
            }
        });

        function UpdateDetails() {
            if ($("#frmDetails").valid()) {
                $("#frmDetails").submit();
            }

        }

    </script>
}