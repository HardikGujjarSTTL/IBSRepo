                                return data != null && data != "" ? moment(data).format("DD-MM-YYYY") : "";
                            }
                            return data;
                        }
                    },
                    {
                        data: "CallMarkDt",
                        render: function (data, type, row) {
                            if (type === "display" || type === "filter") {// If display or filter data is requested, format the date
                                return data != null && data != "" ? moment(data).format("DD-MM-YYYY") : "";
                            }
                            return data;
                        }
                    },
                    { data: "CallSno" },
                    { data: "callDocAny" },
                    { data: "PoSource" },
                    { data: "PoSource" },
                    { data: "CallStatus" },
                    { data: "Remarks" },
                    { data: "PoNo" },
                    { data: "PoDate" },
                    { data: "MfgPers" },
                    { data: "MfgPhone" },
                    { data: "UserId" },
                    { data: "Datetime" },
                    { data: "PType" },
