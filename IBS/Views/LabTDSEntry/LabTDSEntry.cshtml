@model IBS.Models.LabTDSEntryModel
@{
    ViewData["Title"] = "LAB TDS ENTRY FORM";
}

<div class="list-inner">
    <div class="tast-list">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="boxRadius">
<form asp-controller="YourController" asp-action="YourAction" method="post">
        <div class="row my-0">
            <div class="col-md-4 mb-3">
                <label asp-for="SampleRegNo" class="control-label"></label>
                <div class="gridSearch">
                    <input asp-for="SampleRegNo" class="form-control" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="CaseNo" class="control-label"></label>
                <div class="d-flex">
                    <label asp-for="CaseNo" class="control-label" id="lblCNo"></label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="AmountReceived" class="control-label"></label>
                <div class="d-flex">
                    <label asp-for="TDSAmount" class="control-label"></label>
                </div>
            </div>
        </div>
        <div class="row my-0">
            <div class="col-md-4 mb-3">
                <label asp-for="TDSDate" class="control-label"></label>
                <div class="d-flex">
                    <label asp-for="TotalLabCharges" class="control-label"></label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="AmountReceived" class="control-label" id="lblAmtRec"></label>
                <input asp-for="TDSAmount" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="control-label"><br /></label>
                <input asp-for="TDSDate" class="form-control" />
            </div>
        </div>
        <div class="row my-0">
            <div class="col-md-4 mb-3">
                <label asp-for="TotalLabCharges" class="control-label" id="lblTotLabCharges"></label>
            </div>
        </div>


    <div class="row">
        <div class="col-lg-12">
             <span class="astric">*</span> To Add New Record Fill Values and Click on Save
        </div>
    </div>    
        <div class="savenext-btn">
            <a href="javascript:void(0);" class="reset-btn">Cancel</a>
            <button type="submit" class="save-btn active">Save</button>
    </div>
   
</form>
</div>