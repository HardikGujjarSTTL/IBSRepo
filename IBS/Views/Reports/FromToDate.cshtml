<form data-ajax="true" asp-antiforgery="true" asp-controller="Reports" asp-action="FromToDate" data-ajax-method="post" data-ajax-complete="completed" id="frmDetails">
    <div class="list-inner">
        <div class="tast-list">
            <h2><label id="lblTitle" style="font-weight:600;font-family:'Poppins', sans-serif;font-size:24px;"></label></h2>
        </div>
    </div>
    <div class="accordion-body">
        <div class="row my-0">
            <div class="col-md-4 mb-3">
                <div class="reference">
                    <label for="Reference">From Date</label>
                    <input type="text" class="datepicker" asp-for="FromDt" maxlength="100" style="text-transform: uppercase;">
                    <span asp-validation-for="FromDt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="reference">
                    <label for="Reference">To Date</label>
                    <input type="text" class="datepicker" asp-for="ToDt" maxlength="100" style="text-transform: uppercase;">
                    <span asp-validation-for="ToDt" class="text-danger"></span>
                </div>
            </div>
        </div>
        @if (@ViewBag.Action == "ICISSUEDNSUB")
        {
            <div class="row my-0" style="text-align:center;">
                <b><font face="Verdana" color="darkblue" size="2">IC ISSUED BY IE BUT NOT RECEIVED IN OFFICE</font></b>
                <div class="col-md-12" style="font-weight: bold;margin:2px;" id="rdbIECM">
                    @Html.RadioButton("rdbType", "IE Wise", new { @class = "text-darkblue font-bold font-size-8pt", @checked = true }) IE Wise
                    &nbsp;&nbsp;
                    @Html.RadioButton("rdbType", "CM Wise", new { @class = "text-darkblue font-bold font-size-8pt" }) CM Wise
                </div>
            </div>
        }
        <div class="row my-0">
            <div class="col-md-6 mb-3">
                <div class="savenext-btn">
                    <a asp-controller="IC_Receipt" asp-action="Index" class="reset-btn">Back</a>
                    <button type="button" class="save-btn active" id="btnSearch">Search</button>
                </div>
            </div>
        </div>

    </div>
    <section class="table-section" id="tblsection">
        @Html.Partial(@partialView)
    </section>
</form>
@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.7.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.66/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.66/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" />
}

<script>
    var action = "@ViewBag.Action";
    $(document).ready(function () {
        if ("@ViewBag.Action" == "ICISSUEDNSUB") {
            $('input[type=radio][id=rdbType]').change(function () {
                var dataTable = $("#dtList").dataTable();
                dataTable.fnClearTable();
                dataTable.fnDraw();
                dataTable.fnDestroy();

                var rdbType = $('input[name="rdbType"]:checked').val();
                var obj = new Object();
                obj.Type = rdbType;

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("IC_Issued_Partial","IC_Receipt")',//'@Url.Content("~/IC_Receipt/IC_Issued_Partial")',
                    data: obj,
                    success: function (data) {
                        $('#tblsection').html(data)
                    }
                });

            });
        }
        setDefaultDate();
        $("#btnSearch").click(function () {
            InitializeDatatable();
        });
        setTitle(action);
        if("@ViewBag.RoleName" == "Inspection Engineer (IE)"){
            $("#rdbIECM").css("display","none");
        }
    });

    function setDefaultDate() {
        $('#FromDt').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
        });
        $('#ToDt').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
        });
    }

    function setTitle(action){
        if (action == "ICISSUEDNSUB") {
            $("#lblTitle").html("IC ISSUED BY IE BUT NOT RECEIVED IN OFFICE");
        } else if (action == "UNBILLEDIC") {

        } else if (action == "PJI") {
            $("#lblTitle").html("PENDING JI CASES");
        }
    }
</script>
