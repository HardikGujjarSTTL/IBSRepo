@model IBS.Models.MultipleFileUploadModel

<form method="post" enctype="multipart/form-data" asp-controller="MultipleFileUpload" asp-action="Index" id="frmMultipleFileUpload">
    <div class="list-inner">
        <div class="tast-list">
            <h2 style="color:#2b368b">Multiple File Upload</h2>
        </div>
    </div>
    <div class="accordion-body">
        <div class="row my-0">
            <div class="col-md-3 mb-3">
                <label for="Reference">Upload</label>
                <input id="FileUpload" type="file" name="Files" accept="application/pdf" multiple />
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-0">
            <div class="col-md-3 mb-3">
                <div id="image-holder"></div>
            </div>
        </div>
        <div class="row my-0">
            <div class="col-md-6 mb-3">
                <div class="savenext-btn">
                    <button id="btnUpload" type="submit" class="save-btn active">Upload</button>
                </div>
            </div>
        </div>
    </div>
</form>

