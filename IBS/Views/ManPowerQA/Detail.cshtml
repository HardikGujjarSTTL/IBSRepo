@model IBS.Models.ManpowerDetailModel
@{
    ViewData["Title"] = "Manpower in QA Vertical Detail";
}

<div class="list-inner">
    <div class="tast-list">
        <h2>Manpower in QA Vertical Detail</h2>
    </div>
    <div class="list-btn">
        <a asp-area="" asp-controller="ManPowerQA" asp-action="ManageDetail" class="formBtn Permission_Add"><span class="fa fa-plus"></span> Add New</a>
    </div>
</div>

<div class="task-listinput">
    <div class="accordion-body">
        <div class="task-inner row">
            <div class="col-md-3">
                <div class="input-search">
                    <label for="Reference">Working</label>
                    @Html.DropDownListFor(model => model.Working, new SelectList(IBS.Models.Common.GetWorking() , "Value", "Text"), "--Select--")
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-search">
                    <label for="Reference">Staff</label>
                    @Html.DropDownListFor(model => model.Staff, new SelectList(IBS.Models.Common.GetStaff() , "Value", "Text"), "--Select--")
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-search">
                    <label for="Reference">Place of posting</label>
                    <input type="text" class="input" asp-for="PlacePosting">
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-search">
                    <label for="Reference">Project Name</label>
                    @Html.DropDownListFor(model => model.ProjectName, new SelectList(IBS.Models.Common.GetProjectName() , "Value", "Text"), "--Select--")
                </div>
            </div>
            <div class="col-md-3">
                <div class="savenext-btn btnAlign">
                    <button type="button" class="save-btn active" onclick="InitializeDatatable();">Search</button>
                    <button type="button" class="reset-btn" onclick="CLearControls();">Clear</button>
                </div>
            </div>
        </div>
    </div>
    <section class="table-section">
        <div class="task-listinput">
            <div class="dash-table">
                <table id="dtList" class="table-responsive">
                    <thead>
                        <tr>
                            <th>Working</th>
                            <th>Staff</th>
                            <th>Place of Posting</th>
                            <th>Project Name</th>
                            <th class="actionsTd">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section scripts{
    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">

        $(function () {
            //InitializeDatatable();
        });

        function InitializeDatatable() {

            var Region = $("#Region").val();
            var EmpName = $("#EmpName").val();
            var EmpNo = $("#EmpNo").val();

            $("#dtList").DataTable({
                stateSave: false,// Design Assets
                autoWidth: true,
                scrollX: true,
                scrollCollapse: true,
                processing: true, // ServerSide Setups
                serverSide: true,
                destroy: true,
                paging: true,// Paging Setups
                searching: true,// Searching Setups
                ajax: {// Ajax Filter
                    url: "@Url.Action("LoadTableDetail")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        var AdditionalValues = {
                            Region, EmpName, EmpNo
                        };
                        d.AdditionalValues = AdditionalValues;
                        return JSON.stringify(d);
                    }
                },
                columns: [// Columns Setups
                    { data: "Working" },
                    { data: "Staff" },
                    { data: "PlacePosting" },
                    { data: "PerojectName" },
                    {
                        data: null, orderable: false,
                        render: function (data, type, row) {
                            var id = data.ID;
                            var editUrl = '@Url.Action("ManageDetail", "ManPowerQA")/' + id;
                            var html = '<div align=\"center\" class=\"reportIcon actionCenter\"> <a href=\"' + editUrl + '\" class=\"edit\"><i class=\"fa fa-pencil\" title="Edit"></i></a>';
                            //html += '<a onclick="Delete(this.id); return false;" href="javascript:void(\'0\');" id=\"' + id + '\" class=\"delete\"><i class=\"fa fa-trash\" title="Delete" style="margin:10px;"></i>';
                            html += '</div>';
                            return html;
                        }
                    },
                ],
                "order": [[0, "asc"]]
            });
        }

        function CLearControls() {
            $("#Region").val("");
            $("#EmpName").val("");
            $("#EmpNo").val("");

            InitializeDatatable();
        }

        function Delete(id) {
            var url = '@Url.Action("Delete", "ManPowerQA")';
            $("#btn-delete-yes").attr("href", url + "/" + id);
            $("#modal-delete-conf").modal("show");
        }
    </script>
}

