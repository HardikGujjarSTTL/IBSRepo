 }*@

 <script>
    $(function () {
        $("input[name='drone']").change(function () {
            var selectedValue = $("input[name='drone']:checked").attr("id");
            if (selectedValue === "rdononc") {
                $("#ncrclass").hide();
                $("#ncrcodes").hide();
                $("#btnsendIE").hide();
                $("#rdononc").prop("checked", true);
            } else if (selectedValue === "rdoaddnc") {
                $("#ncrclass").show();
                $("#ncrcodes").show();
                $("#btnsendIE").show();
                $("#rdoaddnc").prop("checked", true);
            }
        });
    });
 </script>
    