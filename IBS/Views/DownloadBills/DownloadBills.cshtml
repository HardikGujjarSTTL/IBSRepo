@model IBS.Models.DownloadBillsModel

<div>
    @* <h3 class="center">(@ViewBag.Region)</h3> *@

    @if (ViewBag.month != null)
    {
        <h3 class="center">Download Online BILLS For The Month of: <span class="orangeText"> @ViewBag.month </span>,<span class="orangeText">@ViewBag.year </span></h3>
        
    }
    else if (ViewBag.From != null)
    {
        <h3 class="center">Download Online BILLS For The Period: <span class="orangeText"> @ViewBag.From </span> To <span class="orangeText">@ViewBag.To </span></h3>
    }
    else
    {   
        <h3 class="center">Download Online BILLS</h3>
    }


    <br>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>

                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>S.No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>RLY</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>PO No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>PO Dt</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Case No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>PO OR Letter</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>BPO_NAME</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Bill No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Bill Dt.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Invoice No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>AU</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>IC No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>IC Date</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>BK No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Set No.</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Bill Amount</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Outstanding Amt</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Digital Bill Gen Date</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Digital Invoice</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>Digital IC</th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana"></font></b>PO</th>

                </tr>
                @if (Model != null && Model.lstbillReport != null)
                {
                    var serialNumber = 1;
                    @foreach (var item in Model.lstbillReport)
                    {

                        <tr>
                            <td width="3%" valign="top" align="Left"><font size="1" face="Verdana">@serialNumber</font></td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BpoRly
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PoNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PoDt
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.CaseNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PoOrLetter
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BpoName
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BillNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BillDt
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.InvoiceNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.AuDesc
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.IcNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.IcDt
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BkNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.SetNo
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BillAmount
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.AmountOutstanding
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.DigBillGenDate
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.OnlineInvoice
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.IcPhoto
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PoSource
                                </font>
                            </td>
                        </tr>
                        serialNumber++;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="22" style="text-align:center; background: #f1f1f1 !important;"><font size="1" face="Verdana">No records found</font></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


