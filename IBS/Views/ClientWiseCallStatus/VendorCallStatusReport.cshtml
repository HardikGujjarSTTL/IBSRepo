@model IBS.Models.ClientCallRptModel

<div>
    @* <h3 class="center">(@ViewBag.Region)</h3>
 *@

    <h3 class="center">Vendor Wise Report For The Period: <span class="orangeText"> @ViewBag.From </span> To <span class="orangeText">@ViewBag.To </span></h3>

    <br>
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>

                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">SNO</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">VENDOR</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">PO NO</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">PO DATE</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Item</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Qty Offered</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Qty Rejected</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Reason For Rejection</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">IC Date</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">IE</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Book No.</font></b></th>
                    <th width="25%" valign="top" align="center"><b><font sizw="1" face="Verdana">Set No.</font></b></th>

                </tr>
                @if (Model != null && Model.lstreport != null)
                {
                    var serialNumber = 1;
                    @foreach (var item in Model.lstreport)
                    {

                        <tr>
                            <td width="3%" valign="top" align="Left"><font size="1" face="Verdana">@serialNumber</font></td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.VendorName
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PO_NO
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.PO_DT
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.ITEM_DESC
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.QTY_TO_INSP
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.QTY_REJECTED
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.REASON_REJECT
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.IC_DT
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.IE_NAME
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.BK_NO
                                </font>
                            </td>
                            <td width="25%" valign="top" align="center">
                                <font size="1" face="Verdana">
                                    @item.SET_NO
                                </font>
                            </td>
                            
                        </tr>
                        serialNumber++;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="22" class="noRecordGrid">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


