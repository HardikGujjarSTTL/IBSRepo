        function FileExists(url) {
            var exists = false;

            $.ajax({
                url: url,
                type: 'HEAD', // Use HEAD request to check if the file exists
                async: false, // Set to synchronous to wait for the response
                success: function () {
                    exists = true;
                },
                error: function () {
                    exists = false;
                }
            });

            return exists;
