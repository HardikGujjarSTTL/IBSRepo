                Decimal fgt1 = 0, fgt2 = 0, fgt3 = 0, fgt4 = 0, fgt5 = 0, fgt6 = 0, fgt7 = 0, fgt8 = 0, fgt9 = 0, fgt10 = 0, fgt11 = 0, fgt12 = 0, fgt13 = 0, fgt14 = 0, fgt15 = 0, fgt16 = 0, fgt17 = 0, fgt18 = 0, fgt19 = 0, fgt20 = 0, fgt21 = 0, fgt22 = 0, fgt23 = 0, fgt24 = 0, fgt25 = 0;

            }
