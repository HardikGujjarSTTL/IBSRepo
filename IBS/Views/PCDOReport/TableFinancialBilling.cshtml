@model List<IBS.Models.Reports.FinancialBillingModel>

@{
    Layout = "";
}

<html>
<head>
    <title>Financial Billing</title>
</head>
<body>
    <p align="right">
        <input type="button" class="commonBtn" value="Print" id="btnPrint" />
        <input type="button" class="commonBtn" value="Export To PDF" id="btnExportToPdf" />
        <input type="button" class="commonBtn" value="Export To Excel" id="btnExportToExcel" />
    </p>
    <div id="dvReportViewer">
        <h3 class="heading3">Financial(Billing)</h3>
        <ul class="reportLabelList">
            <li><span class="labelName">@ViewBag.Title</span></li>
            <br />
            <br />
            <li><span class="labelName">1.0 Financial (Figures in lac of Rs.)</span></li>
            <br />
            <br />
            <li><span class="labelName">1.1 Billing</span></li>
        </ul>
        <table class="borderTable">
            <tr>
                <th width='7.1%' valign='top' align='center' rowspan='2'><b><font size='2' face='Verdana'></font></b></th>
                <th width='46.4%' valign='top' align='center' colspan='12'><b><font size='2' face='Verdana'>Last Year</font></b></th>
                <th width='46.4%' valign='top' align='center' colspan='12'><b><font size='2' face='Verdana'>Current Year</font></b></th>
                <th width='5%' valign='top' align='center'><b><font size='2' face='Verdana'></font></b></th>
            </tr>
            <tr>
                <th width='23.2%' valign='top' align='center' colspan='6'><b><font size='2' face='Verdana'>DTM</font></b></th>
                <th width='23.2%' valign='top' align='center' colspan='6'><b><font size='2' face='Verdana'>CTM</font></b></th>
                <th width='23.2%' valign='top' align='center' colspan='6'><b><font size='2' face='Verdana'>DTM</font></b></th>
                <th width='23.2%' valign='top' align='center' colspan='6'><b><font size='2' face='Verdana'>CTM</font></b></th>
                <th width='5%' valign='top' align='center' rowspan='2'><b><font size='2' face='Verdana'>Pro-rata Target</font></b></th>
            </tr>
            <tr>
                <th width="7.1%" valign="top" align="center"><b>Region</b></th>
                <th width="4.76%" valign="top" align="center"><b>Railway</b></th>
                <th width="4.76%" valign="top" align="center"><b>Non railway+ Others</b></th>
                <th width="4.76%" valign="top" align="center"><b>Lab</b></th>
                <th width="4.76%" valign="top" align="center"><b>Internal Billing</b></th>
                <th width="4.76%" valign="top" align="center"><b>Adjustment</b></th>
                <th width="4.76%" valign="top" align="center"><b>Total</b></th>
                <th width="4.76%" valign="top" align="center"><b>Railway</b></th>
                <th width="4.76%" valign="top" align="center"><b>Non railway+ Others</b></th>
                <th width="4.76%" valign="top" align="center"><b>Lab</b></th>
                <th width="4.76%" valign="top" align="center"><b>Internal Billing</b></th>
                <th width="4.76%" valign="top" align="center"><b>Adjustment</b></th>
                <th width="4.76%" valign="top" align="center"><b>Total</b></th>
                <th width="4.76%" valign="top" align="center"><b>Railway</b></th>
                <th width="4.76%" valign="top" align="center"><b>Non railway+ Others</b></th>
                <th width="4.76%" valign="top" align="center"><b>Lab</b></th>
                <th width="4.76%" valign="top" align="center"><b>Internal Billing</b></th>
                <th width="4.76%" valign="top" align="center"><b>Adjustment</b></th>
                <th width="4.76%" valign="top" align="center"><b>Total<font color="red">*</font></b></th>
                <th width="4.76%" valign="top" align="center"><b>Railway</b></th>
                <th width="4.76%" valign="top" align="center"><b>Non railway+ Others</b></th>
                <th width="4.76%" valign="top" align="center"><b>Lab</b></th>
                <th width="4.76%" valign="top" align="center"><b>Internal Billing</b></th>
                <th width="4.76%" valign="top" align="center"><b>Adjustment</b></th>
                <th width="4.76%" valign="top" align="center"><b>Total<font color="red">*</font></b></th>
            </tr>
            @{
                Decimal ft1, ft2, ft3, ft4;
                Decimal fgt1 = 0, fgt2 = 0, fgt3 = 0, fgt4 = 0, fgt5 = 0, fgt6 = 0, fgt7 = 0, fgt8 = 0, fgt9 = 0, fgt10 = 0, fgt11 = 0, fgt12 = 0, fgt13 = 0, fgt14 = 0, fgt15 = 0, fgt16 = 0, fgt17 = 0, fgt18 = 0, fgt19 = 0, fgt20 = 0, fgt21 = 0, fgt22 = 0, fgt23 = 0, fgt24 = 0, fgt25 = 0;

            }
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    ft1 = Convert.ToDecimal(item.DR_FEE) + Convert.ToDecimal(item.DNR_FEE) + Convert.ToDecimal(item.DRI_FEE) + Convert.ToDecimal(item.DTM_FEE) - Convert.ToDecimal(item.CCTM_adj_Fee_past);
                    ft2 = Convert.ToDecimal(item.DCR_FEE) + Convert.ToDecimal(item.DCNR_FEE) + Convert.ToDecimal(item.DCRI_FEE) + Convert.ToDecimal(item.CTM_FEE) - Convert.ToDecimal(item.CUTM_adj_Fee_past);
                    ft3 = Convert.ToDecimal(item.R_FEE) + Convert.ToDecimal(item.NR_FEE) + Convert.ToDecimal(item.RI_FEE) + Convert.ToDecimal(item.CDTM_FEE) - Convert.ToDecimal(item.CCTM_adj_Fee);
                    ft4 = Convert.ToDecimal(item.CR_FEE) + Convert.ToDecimal(item.CNR_FEE) + Convert.ToDecimal(item.CRI_FEE) + Convert.ToDecimal(item.CCTM_FEE) - Convert.ToDecimal(item.CUTM_adj_Fee);

                    fgt1 += Convert.ToDecimal(item.DR_FEE);
                    fgt2 += Convert.ToDecimal(item.DNR_FEE);
                    fgt3 += Convert.ToDecimal(item.DRI_FEE);
                    fgt17 += Convert.ToDecimal(item.DTM_FEE);
                    fgt22 += Convert.ToDecimal(item.CCTM_adj_Fee_past);
                    fgt4 += ft1;
                    fgt5 += Convert.ToDecimal(item.DCR_FEE);
                    fgt6 += Convert.ToDecimal(item.DCNR_FEE);
                    fgt7 += Convert.ToDecimal(item.DCRI_FEE);
                    fgt18 += Convert.ToDecimal(item.CTM_FEE);
                    fgt23 += Convert.ToDecimal(item.CUTM_adj_Fee_past);
                    fgt8 += ft2;
                    fgt9 += Convert.ToDecimal(item.R_FEE);
                    fgt10 += Convert.ToDecimal(item.NR_FEE);
                    fgt11 += Convert.ToDecimal(item.RI_FEE);
                    fgt19 += Convert.ToDecimal(item.CDTM_FEE);
                    fgt24 += Convert.ToDecimal(item.CCTM_adj_Fee);
                    fgt12 += ft3;
                    fgt13 += Convert.ToDecimal(item.CR_FEE);
                    fgt14 += Convert.ToDecimal(item.CNR_FEE);
                    fgt15 += Convert.ToDecimal(item.CRI_FEE);
                    fgt20 += Convert.ToDecimal(item.CCTM_FEE);
                    fgt25 += Convert.ToDecimal(item.CUTM_adj_Fee);
                    fgt16 += ft4;
                    fgt21 += Convert.ToDecimal(item.B_TARGET);
                    
                    <tr>
                        <td width="7.1%" valign="top" align="left"><b>@item.Region_Code</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DNR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DTM_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DRI_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CCTM_adj_Fee_past</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@ft1</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DCR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DCNR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CTM_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.DCRI_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CUTM_adj_Fee_past</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@ft2</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.R_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.NR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CDTM_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.RI_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CCTM_adj_Fee</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@ft3</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CNR_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CRI_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CCTM_FEE</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.CUTM_adj_Fee</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@ft4</b></td>
                        <td width="4.76%" valign="top" align="center"><b>@item.B_TARGET</b></td>
                    </tr>
                }
            }
            <tr>
                <td width="7.1%" valign="top" align="right"><b>Total</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt1</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt2</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt17</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt3</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt22</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt4</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt5</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt6</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt18</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt7</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt23</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt8</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt9</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt10</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt19</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt11</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt24</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt12</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt13</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt14</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt20</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt15</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt25</b></td>
                <td width="4.76%" valign="top" align="center"><b>@fgt16</b></td>
                <td width="5%" valign="top" align="center"><b>@fgt21</b></td>
            </tr>
            <tr>
                <td align="left" colspan="26"><b><font color="red">*</font></b><font size="1" face="Verdana"> Indicates (Billing = Billing - Adjustments)</font></td>
            </tr>
        </table>

    </div>
    <div class="overlayLoader" style="display: none">
        <div class="loaderHolder">
            <div class="lds-dual-ring"></div>
        </div>
    </div>
</body>
</html>
<link href="~/css/report.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/js/html2pdf.bundle.min.js"></script>
<script src="~/js/site.js"></script>
<script type="text/javascript">
    var fileName = 'Highlight';

    $(document).ajaxSend(function () {
        $(".overlayLoader").show();
    });

    $(document).ajaxComplete(function () {
        $(".overlayLoader").hide();
    });

    $("#btnPrint").click(function () {
        generatePdf(true);
    });

    $("#btnExportToPdf").click(function () {
        generatePdf(false);
    });

    $("#btnExportToExcel").click(function () {
        let file = new Blob([$('#dvReportViewer').html()], { type: "application/vnd.ms-excel" });
        let url = URL.createObjectURL(file);
        let a = $("<a />", {
            href: url,
            download: getExportFileName(fileName) + ".xls"
        }).appendTo("body").get(0).click();
        e.preventDefault();
    });

    function generatePdf(isPrint) {
        var element = document.getElementById('dvReportViewer');

        element.style.width = "1100px";

        const options = {
            margin: 0,
            filename: getExportFileName(fileName) + '.pdf',
            image: { type: 'jpeg', quality: 1 },
            html2canvas: {
                scale: 4,
                useCORS: true
            },
            jsPDF: { unit: 'in', format: 'a4', orientation: 'landscape' }
        };

        if (isPrint) {
            html2pdf().set(options).from(element).toPdf().get('pdf').then(function (pdfObj) {
                pdfObj.autoPrint();
                window.open(pdfObj.output('bloburl'), '_blank');
            });
        }
        else {
            html2pdf().set(options).from(element).save();
        }

        element.style.width = "100%";
    }
</script>
