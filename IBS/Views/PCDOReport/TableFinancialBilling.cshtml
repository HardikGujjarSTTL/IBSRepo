            {
                foreach (var item in Model)
                {
                    ft1 = Convert.ToDecimal(item.DR_FEE) + Convert.ToDecimal(item.DNR_FEE) + Convert.ToDecimal(item.DRI_FEE) + Convert.ToDecimal(item.DTM_FEE) - Convert.ToDecimal(item.CCTM_adj_Fee_past);
                    ft2 = Convert.ToDecimal(item.DCR_FEE) + Convert.ToDecimal(item.DCNR_FEE) + Convert.ToDecimal(item.DCRI_FEE) + Convert.ToDecimal(item.CTM_FEE) - Convert.ToDecimal(item.CUTM_adj_Fee_past);
                    ft3 = Convert.ToDecimal(item.R_FEE) + Convert.ToDecimal(item.NR_FEE) + Convert.ToDecimal(item.RI_FEE) + Convert.ToDecimal(item.CDTM_FEE) - Convert.ToDecimal(item.CCTM_adj_Fee);
                    ft4 = Convert.ToDecimal(item.CR_FEE) + Convert.ToDecimal(item.CNR_FEE) + Convert.ToDecimal(item.CRI_FEE) + Convert.ToDecimal(item.CCTM_FEE) - Convert.ToDecimal(item.CUTM_adj_Fee);

                    fgt1 += Convert.ToDecimal(item.DR_FEE);
                    fgt2 += Convert.ToDecimal(item.DNR_FEE);
                    fgt3 += Convert.ToDecimal(item.DRI_FEE);
                    fgt17 += Convert.ToDecimal(item.DTM_FEE);
                    fgt22 += Convert.ToDecimal(item.CCTM_adj_Fee_past);
                    fgt4 += ft1;
                    fgt5 += Convert.ToDecimal(item.DCR_FEE);
                    fgt6 += Convert.ToDecimal(item.DCNR_FEE);
                    fgt7 += Convert.ToDecimal(item.DCRI_FEE);
                    fgt18 += Convert.ToDecimal(item.CTM_FEE);
                    fgt23 += Convert.ToDecimal(item.CUTM_adj_Fee_past);
                    fgt8 += ft2;
                    fgt9 += Convert.ToDecimal(item.R_FEE);
                    fgt10 += Convert.ToDecimal(item.NR_FEE);
                    fgt11 += Convert.ToDecimal(item.RI_FEE);
                    fgt19 += Convert.ToDecimal(item.CDTM_FEE);
                    fgt24 += Convert.ToDecimal(item.CCTM_adj_Fee);
                    fgt12 += ft3;
                    fgt13 += Convert.ToDecimal(item.CR_FEE);
                    fgt14 += Convert.ToDecimal(item.CNR_FEE);
                    fgt15 += Convert.ToDecimal(item.CRI_FEE);
                    fgt20 += Convert.ToDecimal(item.CCTM_FEE);
                    fgt25 += Convert.ToDecimal(item.CUTM_adj_Fee);
                    fgt16 += ft4;
                    fgt21 += Convert.ToDecimal(item.B_TARGET);
                    
                    <tr>
                        <td width="7.1%" valign="top" align="left"><font size='1' face='Verdana'>@item.Region_Code</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DNR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DTM_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DRI_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CCTM_adj_Fee_past</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@ft1</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DCR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DCNR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CTM_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.DCRI_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CUTM_adj_Fee_past</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@ft2</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.R_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.NR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CDTM_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.RI_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CCTM_adj_Fee</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@ft3</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CNR_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CRI_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CCTM_FEE</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.CUTM_adj_Fee</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@ft4</font></td>
                        <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'>@item.B_TARGET</font></td>
                    </tr>
                }
            }
            <tr>
                <td width="7.1%" valign="top" align="right"><font size='1' face='Verdana'><b>Total</b></font></td>
                <td width="4.76%" valign="top" align="center"><font size='1' face='Verdana'><b>@fgt1</b></font></td>
