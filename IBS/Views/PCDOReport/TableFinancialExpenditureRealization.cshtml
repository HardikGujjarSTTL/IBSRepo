@model IBS.Models.Reports.FinancialExpenditureRealizationMainModel

@{
    Layout = "";
}

<html>
<head>
    <title>Financial Billing</title>
</head>
<body>
    <p align="right">
        <input type="button" class="commonBtn" value="Print" id="btnPrint" />
        <input type="button" class="commonBtn" value="Export To PDF" id="btnExportToPdf" />
        <input type="button" class="commonBtn" value="Export To Excel" id="btnExportToExcel" />
    </p>
    <div id="dvReportViewer">
        <h3 class="center">Financial (Expenditure & Realization)</h3>
        <ul class="reportLabelList center">
            <li><span class="labelName">@ViewBag.Title</span></li>
            <br />
            <br />
            <li><span class="labelName">1.2 Expenditure</span></li>
        </ul>
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tr>
                <th width='7.2%' valign='top' align='center' rowspan='2'><b><font size='2' face='Verdana'></font></b></th>
                <th width='36.4%' valign='top' align='center' colspan='4'><b><font size='2' face='Verdana'>Last Year</font></b></th>
                <th width='56.4%' valign='top' align='center' colspan='6'><b><font size='2' face='Verdana'>Current Year</font></b></th>
            </tr>
            <tr>
                <th width='18.2%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>DTM</font></b></th>
                <th width='18.2%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>CTM</font></b></th>
                <th width='18.2%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>DTM</font></b></th>
                <th width='18.2%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>CTM</font></b></th>
                <th width='9%' valign='top' align='center'><b><font size='2' face='Verdana'>Actual</font></b></th>
                <th width='9%' valign='top' align='center'><b><font size='2' face='Verdana'>Target</font></b></th>
            </tr>
            <tr>
                <td width='9%' valign='top' align='center'><b><font size='2' face='Verdana'>Region</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>Expenditure</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>GST</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>Expenditure</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>GST</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>Expenditure</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>GST</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>Expenditure</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>GST</font></b></td>
                <td width='9%' valign='top' align='center'><b><font size='1.5' face='Verdana'>OR</font></b></td>
                <td width='9%' valign='top' align='center'><b><font size='1.5' face='Verdana'>OR</font></b></td>
            </tr>
            @{
                decimal t1 = 0, t2 = 0, t3 = 0, t4 = 0, t5 = 0, t6 = 0, t7 = 0, t8 = 0, t9 = 0, t10 = 0, t11 = 0, t12 = 0;
            }
            @if (Model != null && Model.financialExpenditureRealizationModels.Count > 0)
            {
                foreach (var item in Model.financialExpenditureRealizationModels)
                {
                    t1 = t1 + Convert.ToDecimal(@item.DTM_EXP_FEE);
                    t2 = t2 + Convert.ToDecimal(@item.DTM_TAX_FEE);
                    t3 = t3 + Convert.ToDecimal(@item.CTM_EXP_FEE);
                    t4 = t4 + Convert.ToDecimal(@item.CTM_TAX_FEE);
                    t5 = t5 + Convert.ToDecimal(@item.CDTM_EXP_FEE);
                    t6 = t6 + Convert.ToDecimal(@item.CDTM_TAX_FEE);
                    t7 = t7 + Convert.ToDecimal(@item.CCTM_EXP_FEE);
                    t8 = t8 + Convert.ToDecimal(@item.CCTM_TAX_FEE);
                    t9 = t9 + Convert.ToDecimal(@item.TOA1) + Convert.ToDecimal(@item.TOA2) - Convert.ToDecimal(@item.CUTM_adj_Fee);
                    t10 = t10 + Convert.ToDecimal(@item.TOR);

                    <tr>
                        <td width='7.2%' valign='top' align='center'><b><font size='2' face='Verdana'>@item.Region_Code</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.DTM_EXP_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.DTM_TAX_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CTM_EXP_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CTM_TAX_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CDTM_EXP_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CDTM_TAX_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CCTM_EXP_FEE</font></b></td>
                        <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.CCTM_TAX_FEE</font></b></td>
                        <td width='10%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.OR_Actual</font></b></td>
                        <td width='10%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.TOR</font></b></td>
                    </tr>
                }
            }
            @if (t9 != 0)
            {
                t11 = t11 + Math.Round(((t7 / t9) * 100), 2);
            }
            else
            {
                t11 = 0;
            }
            @{
                t12 = t12 + Math.Round((t10 / 5), 2);
            }
            <tr>
                <td width='7.2%' valign='top' align='Right'><b><font size='2' face='Verdana'>Total</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t1</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t2</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t3</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t4</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t5</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t6</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t7</font></b></td>
                <td width='9.1%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t8</font></b></td>
                <td width='10%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t11</font></b></td>
                <td width='10%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@t12</font></b></td>
            </tr>
        </table>

        <ul class="reportLabelList center">
            <br />
            <br />
            <li><span class="labelName">1.3 Realisation</span></li>
        </ul>

        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tr>
                <th width='10%' valign='top' align='center' rowspan='2'><b><font size='2' face='Verdana'></font></b></th>
                <th width='60%' valign='top' align='center' colspan='4'><b><font size='2' face='Verdana'>Current Year</font></b></th>
            </tr>
            <tr>
                <th width='30%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>Realisation</font></b></th>
                <th width='30%' valign='top' align='center' colspan='2'><b><font size='2' face='Verdana'>Billing Including Service tax</font></b></th>
            </tr>
            <tr>
                <td width='10%' valign='top' align='center'><b><font size='2' face='Verdana'>Region</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>DTM</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>CTM</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>DTM</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>CTM</font></b></td>
            </tr>
            @{
                decimal tg_1 = 0, tg_2 = 0, tg_3 = 0, tg_4 = 0;
                int i = 0;
            }
            @if (Model != null && Model.realisationModel.Count > 0)
            {
                foreach (var item in Model.realisationModel)
                {
                    int j = i;
                    int k = i;
                    <tr>
                        <td width='10%' valign='top' align='left'><b><font size='2' face='Verdana'>@item.Region</font></b></td>
                        <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@item.real_amt</font></b></td>
                        <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@Model.realisation1Model[j].real_amt</font></b></td>
                        <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@Math.Round(Convert.ToDouble(@Model.realisation2Model[j].bill_am.ToString()),2)</font></b></td>
                        <td width='15%' valign='top' align='center'><b><font size='1.5' face='Verdana'>@Math.Round(Convert.ToDouble(@Model.realisation2Model[j].cubill_amt.ToString()),2)</font></b></td>
                    </tr>
                    tg_1 = tg_1 + Convert.ToDecimal(item.real_amt.ToString());
                    tg_2 = tg_2 + Convert.ToDecimal(Model.realisation1Model[i].real_amt.ToString());
				    tg_3=tg_3+Convert.ToDecimal(Model.realisation2Model[i].bill_am.ToString());
				    tg_4=tg_4+Convert.ToDecimal(Model.realisation2Model[i].cubill_amt.ToString());

                    i++;
                }
            }
            <tr>
                <td width='10%' valign='top' align='right'><b><font size='2' face='Verdana'>Total</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='2' face='Verdana'>@tg_1</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='2' face='Verdana'>@tg_2</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='2' face='Verdana'>@Math.Round(Convert.ToDouble(@tg_3.ToString()),2)</font></b></td>
                <td width='15%' valign='top' align='center'><b><font size='2' face='Verdana'>@Math.Round(Convert.ToDouble(@tg_4.ToString()),2)</font></b></td>
            </tr>
        </table>

    </div>
    <div class="overlayLoader" style="display: none">
        <div class="loaderHolder">
            <div class="lds-dual-ring"></div>
        </div>
    </div>
</body>
</html>
<link href="~/css/report.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/js/html2pdf.bundle.min.js"></script>
<script src="~/js/site.js"></script>
<script type="text/javascript">
    var fileName = 'FinancialExpenditureRealization';

    $(document).ajaxSend(function () {
        $(".overlayLoader").show();
    });

    $(document).ajaxComplete(function () {
        $(".overlayLoader").hide();
    });

    $("#btnPrint").click(function () {
        generatePdf(true);
    });

    $("#btnExportToPdf").click(function () {
        generatePdf(false);
    });

    $("#btnExportToExcel").click(function () {
        let file = new Blob([$('#dvReportViewer').html()], { type: "application/vnd.ms-excel" });
        let url = URL.createObjectURL(file);
        let a = $("<a />", {
            href: url,
            download: getExportFileName(fileName) + ".xls"
        }).appendTo("body").get(0).click();
        e.preventDefault();
    });

    function generatePdf(isPrint) {
        var HTML = $('#dvReportViewer').html();

        $.ajax({
            url: "@Url.Action("GeneratePDF", "PCDOReport")",
            type: "POST",
            contentType: "application/x-www-form-urlencoded",
            data: { htmlContent: HTML },
            xhrFields: {
                responseType: 'blob'
            },
            success: function (result) {
                var url = window.URL.createObjectURL(result);
                if (isPrint) {
                    iframe = document.createElement('iframe');
                    document.body.appendChild(iframe);

                    iframe.style.display = 'none';
                    iframe.src = url;
                    iframe.onload = function () {
                        setTimeout(function () {
                            iframe.focus();
                            iframe.contentWindow.print();
                        }, 1);
                    };
                }
                else {
                    var a = document.createElement('a');
                    a.href = url;
                    a.download = getExportFileName(fileName) + '.pdf';
                    document.body.append(a);
                    a.click();
                    a.remove();
                    window.URL.revokeObjectURL(url);
                }
            },
            error: function (error) {
                console.error(error);
            }
        });
    }
</script>
