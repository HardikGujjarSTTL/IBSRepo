@{
    ViewData["Title"] = "BD Efforts";
}

<div>
    <div class="list-inner">
        <div class="tast-list">
            <h2>BD Efforts</h2>
        </div>
    </div>
    <partial name="_PCDOReportHeader" />
</div>
@section scripts{
    <script type="text/javascript">
        function Search() {
            GetData();
        }
        function GetData() {
            var month = $("#ddlMonth").val();
            var Monthtext = $("#ddlMonth option:selected").text();
            var Year = $("#ddlYear").val();
            let myObject = { month, Year, Monthtext };
            var url = '@Url.Action("TableBDEfforts", "PCDOReport")?' + $.param(myObject);
            window.open(url, '_blank');
        }
    </script>
}