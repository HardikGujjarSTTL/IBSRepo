                    Count = Count + 1;
                    t_NR = t_NR + Convert.ToDecimal(item.NR);
                    t_ER = t_ER + Convert.ToDecimal(item.ER);
                    t_WR = t_WR + Convert.ToDecimal(item.WR);
                    t_SR = t_SR + Convert.ToDecimal(item.SR);
                    t_CR = t_CR + Convert.ToDecimal(item.CR);
                    t_TotalT = t_TotalT + Convert.ToDecimal(item.Total);
                }
            }
