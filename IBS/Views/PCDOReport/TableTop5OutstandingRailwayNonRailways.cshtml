                        <td width="22%" valign="top"><font size="1" face="Verdana"></font>@item.bpo_orgn</td>
                        <td width="13%" valign="top"><font size="1" face="Verdana"></font>@item.NR</td>
                        <td width="13%" valign="top"><font size="1" face="Verdana"></font>@item.ER</td>
                        <td width="13%" valign="top"><font size="1" face="Verdana"></font>@item.WR</td>
                        <td width="13%" valign="top"><font size="1" face="Verdana"></font>@item.SR</td>
                        <td width="13%" valign="top"><font size="1" face="Verdana"></font>@item.CR</td>
                        <td width="11%" valign="top"><font size="1" face="Verdana"></font>@item.Total</td>
