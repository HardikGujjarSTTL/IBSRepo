                <td width="13%" valign="top"><font size='1' face="Verdana"><b>@t_ER</b></font></td>
                <td width="13%" valign="top"><font size='1' face="Verdana"><b>@t_WR</b></font></td>
                <td width="13%" valign="top"><font size='1' face="Verdana"><b>@t_SR</b></font></td>
                <td width="13%" valign="top"><font size='1' face="Verdana"><b>@t_CR</b></font></td>
