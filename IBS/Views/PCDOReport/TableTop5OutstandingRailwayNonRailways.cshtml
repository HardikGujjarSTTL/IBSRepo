                    </tr>
                    Count = Count + 1;
                    t_NRn = t_NRn + Convert.ToDecimal(item.NR);
                    t_ERn = t_ERn + Convert.ToDecimal(item.ER);
                    t_WRn = t_WRn + Convert.ToDecimal(item.WR);
