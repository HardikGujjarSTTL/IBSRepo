@model IBS.Models.ChatMessage

<div>
    <h3 class="center">Chat History</h3>    
    <div class="tableOuter">
        <table class="borderTable" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <th width="15%" valign="top" align="center"><b><font size="1" face="Verdana">ID</font></b></th>
                    <th width="15%" valign="top" align="center"><b><font size="1" face="Verdana">Message Send Name</font></b></th>
                    <th width="7%" valign="top" align="center"><b><font size="1" face="Verdana">Message Received Name</font></b></th>
                    <th width="8%" valign="top" align="center"><b><font size="1" face="Verdana">Message</font></b></th>                    
                </tr>
                @if (Model != null && Model.lstMsg != null && Model.lstMsg.Count > 0)
                {
                    @foreach (var item in Model.lstMsg)
                    {
                        <tr>
                            <td width="15%" valign="top" align="Left"><font size="1" face="Verdana">@item.ID</font></td>
                            <td width="15%" valign="top" align="center"><font size="1" face="Verdana">@item.msg_send_ID</font></td>
                            <td width="7%" valign="top" align="right"><font size="1" face="Verdana">@item.msg_recv_ID</font></td>
                            <td width="8%" valign="top" align="right"><font size="1" face="Verdana">@item.send_message</font></td>                            
                        </tr>
                    }                    
                }
                else
                {
                    <tr>
                        <td colspan="13" class="noRecordGrid">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>    
</div>