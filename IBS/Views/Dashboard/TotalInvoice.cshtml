@model IBS.Models.LabInvoiceReportModel
@{
    ViewData["Title"] = "LAB INVOICE";
}

<div>
    <div class="list-inner">
        <div class="tast-list">
            @if(ViewBag.Flag == 1)
            {
                <h2>NO OF TOTAL INVOICES </h2>
            }
            else if (ViewBag.Flag == 2)
            {
                <h2>NO OF FINALIZED INVOICES </h2>
            }
            else if (ViewBag.Flag == 3)
            {
                <h2>NO OF PENDING INVOICES FOR FINALIZATION</h2>
            }
           
        </div>

    </div>
    <div class="accordion-body">
        <div class="row my-0">
            <div class="col-md-2 mb-3">
                <label for="PropertyId">From Date</label>
                <input type="text" class="input datepicker" id="dtfrom" />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3">
                <label for="PropertyId">To Date</label>
                <input type="text" class="input datepicker" id="dtto" />
                <span class="text-danger"></span>
            </div>
            <div class="savenext-btn col-md-2 mb-3" style="margin-top:auto;">
                <button type="button" class="save-btn active" onclick="show();">Search</button>
            </div>
        </div>

    </div>

</div>

    <section class="table-section">
        <div class="task-listinput">
            <div class="dash-table">
                <table id="dttotalinvoice" class="table-responsive">
                    <thead>
                        <tr>
                            <th>S.NO.</th>
                            <th>Name of Party</th>
                            <th>GSTIN</th>
                            <th>State CD</th>
                            <th>Invoice No.</th>
                            <th>Invoice Date</th>
                            <th>Type (L/C)</th>
                            <th>HSN Code</th>
                            <th>Invoice Type(N/C)</th>
                            <th>Invoice Value</th>
                            <th>Amount(Without Tax)</th>
                            <th>SGST</th>
                            <th>CGST</th>
                            <th>IGST</th>
                            <th>Total GST</th>
                            <th>Bill Finalised</th>
                            <th>Sent to Sap</th>
                            @* <th>IRN_NO</th> *@

                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </section>



@section scripts{

    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        function show() {
            if ($("#dtfrom").val() == '') {
                alert("Please Select From Date");
                return false;
            }
            else if ($("#dtto").val() == '') {
                alert("Please Select To Date");
                return false;
            }

            var wFrmDtO = $("#dtfrom").val();
            var wToDt = $("#dtto").val();
            var Flag = '@ViewBag.Flag';
            //var parts = from.split('/');
            //var wFrmDtO = parts[2] + '/' + parts[1] + '/' + parts[0];

            //var parts1 = to.split('/');
            //var wToDt = parts1[2] + '/' + parts1[1] + '/' + parts1[0];

            InitializeDatatable(wFrmDtO, wToDt, Flag);
            // $("#hide").css("display", "block");
        }

        $(function () {
            var wFrmDtO = $("#dtfrom").val();
            var wToDt = $("#dtto").val();
            var Flag = '@ViewBag.Flag';
            InitializeDatatable(wFrmDtO, wToDt, Flag);
        });

        function InitializeDatatable(wFrmDtO, wToDt, Flag) {
            // var _title = '\n LAB INVOICE REPORT;
            // if (wFrmDtO != "" || wToDt != "") {
            //     _title = '\n LAB INVOICE REPORT For the Period :' + wFrmDtO + ' To ' + wToDt
            // }
            $("#dttotalinvoice").DataTable({
                stateSave: false,// Design Assets
                autoWidth: true,
                scrollX: true,
                scrollCollapse: true,
                processing: true, // ServerSide Setups
                serverSide: true,
                destroy: true,
                paging: true,// Paging Setups
                searching: true,// Searching Setups
                ajax: {// Ajax Filter
                    url: "@Url.Action("LoadTableInvoice")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        var AdditionalValues = {
                            wFrmDtO: wFrmDtO,
                            wToDt: wToDt,
                                    Flag: Flag
                        };
                        d.AdditionalValues = AdditionalValues;
                        return JSON.stringify(d);
                    }
                },

                columns: [// Columns Setups
                    {
                        data: '', orderable: false, width: '5%',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },

                    { data: "BPO_NAME" },
                    { data: "recipient_gstin_no" },
                    { data: "St_cd" },
                    { data: "invoice_no" },
                    { data: "invoice_dt" },
                    { data: "INV_TYPE" },
                    { data: "HSN_CD" },
                    { data: "INVOICE_TYPE" },
                    { data: "Total_AMT" },
                    { data: "INV_amount" },
                    { data: "INV_sgst" },
                    { data: "INV_cgst" },
                    { data: "INV_igst" },
                    { data: "Total_GST" },
                    { data: "BILL_FINALIZE" },
                    { data: "BILL_SENT" }
                    // { data: "IRN_NO" }

                ],

                "order": [[0, "asc"]]
            });

        }
       
    </script>
}