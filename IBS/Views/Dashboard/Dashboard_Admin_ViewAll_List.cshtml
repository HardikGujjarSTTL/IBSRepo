@model DashboardModel
@{
    var type = ViewContext.HttpContext.Request.Query["Type"].First();
    var title = "";
    if (type == "CHP")
    {
        title = "Clients with Highest Payments";
    }
    else if (type == "CHO")
    {
        title = "Clients with Highest Outstading";
    }
    else if (type == "OPC")
    {
        title = "Oldest Pending Cases";
    }
    else if (type == "OJC")
    {
        title = "Oldest JI cases";
    }
    ViewData["Title"] = title;
}

<div class="list-inner">
    <div class="tast-list">
        <h3 class="heading3"><span id="spnHeading"></span> </h3>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Dashboard" class="formBtn viewall-btn" id="btnBack">Back</a>
    </div>
</div>

<div class="accordion-body" id="body">
    <div class="row my-0">
        <input type="hidden" asp-for="ActionType" />
        <input type="hidden" asp-for="Region" />
        <div class="col-md-2 mb-3">
            <div class="reference">
                <label for="Reference">From</label>
                <input type="text" class="datepicker" id="FromDate" placeholder="DD/MM/YYYY" />
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="reference">
                <label for="Reference">To</label>
                <input type="text" class="datepicker" id="ToDate" placeholder="DD/MM/YYYY" />
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="reference">
                <label for="Reference">Region</label>
                @Html.DropDownListFor(model => model.Region, Common.GetDashboardRegion().Where(x=>x.Value == Model.Region), new { })
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="savenext-btn btnAlign">
                <button type="button" class="save-btn active Permission_Save" onclick="InitializeDatatable()" id="btnSearch">Search</button>
            </div>
        </div>
    </div>    
</div>

<section class="table-section">
    <div class="task-listinput">
        <div class="dash-table">
            <table id="dtList" class="table-responsive">
                <thead>
                    <tr>
                        @* <th>#</th>
                        <th>Name of Client</th>
                        <th>No. of bills</th>
                        <th>Value (₹)</th>
                        <th>PO No.</th>*@
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section scripts{

    <partial name="_DataTablesScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        var Columns = [];
        $(function () {

            var financialYearDates = GetFinancialYearStartEndDate();

            $("#FromDate").val($.datepicker.formatDate("dd/mm/yy", financialYearDates.start));
            $("#ToDate").val($.datepicker.formatDate("dd/mm/yy", financialYearDates.end));

            const urlParams = new URLSearchParams(window.location.search);
            const type = urlParams.get('Type');
            const region = urlParams.get('Region');
            $("#ActionType").val(type);
            $("#Region").val(region);
            if (type == "CHP" || type == "CHO") {
                if (type == "CHP") {
                    $("#spnHeading").text("No. of Clients with Highest Payments");
                } else {
                    $("#spnHeading").text("No. of Clients with Highest Outstading");
                }

                Columns = [
                    {
                        data: '', title: "#", orderable: false, width: '5%',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { data: "ClientName", title: "Client Name" },
                    { data: "NoofBills", title: "No. of Bills" },
                    { data: "Value", title: " Value (₹)" },
                ]
            } else if (type == "OPC" || type == "OJC") {
                if (type == "OPC") {
                    $("#spnHeading").text("No. of Oldest Pending Cases. ");
                }
                else {
                    $("#spnHeading").text("No. of Oldest JI Cases. ");
                }

                Columns = [
                    {
                        data: '', title: "#", orderable: false, width: '5%',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { data: "CaseNo", title: "Case No" },
                    {
                        data: "CallDate", title: "Call Date",
                        render: function (data, type, row) {
                            if (type === "display" || type === "filter") {// If display or filter data is requested, format the date
                                return data != null && data != "" ? moment(data).format("DD-MM-YYYY") : "";
                            }
                            return data;
                        }
                    },
                    { data: "PONO", title: "PO NO" },
                ]
            }
            InitializeDatatable();
        });

        function InitializeDatatable() {
            var FromDate = $("#FromDate").val();
            var ToDate = $("#ToDate").val();
            var TypeOfList = $("#ActionType").val();
            var Region = $("#Region").val();

            $("#dtList").DataTable({
                stateSave: false,
                autoWidth: true,
                scrollX: true,
                scrollCollapse: true,
                processing: true,
                serverSide: true,
                destroy: true,
                paging: true,
                searching: true,
                ajax: {
                    url: "@Url.Action("LoadDashboard_Admin_ViewAll_List", "Dashboard")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        var AdditionalValues = {
                            FromDate, ToDate, TypeOfList, Region
                        };
                        d.AdditionalValues = AdditionalValues;
                        return JSON.stringify(d);
                    }
                },
                columns: Columns,
                "order": [[0, "asc"]]
            });
        }

    </script>
}
