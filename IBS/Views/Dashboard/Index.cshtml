            chart: {
                type: 'pie',
                height: '250',
            },
            title: {
                text: ''
            },
            tooltip: {
                valueSuffix: '%'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                itemMarginTop: 10,
                itemMarginBottom: 10
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
