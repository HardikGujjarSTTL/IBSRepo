@section scripts{
    <script>
        Highcharts.chart('monthlychart', {
            chart: {
                type: 'column'
            },
            title: {
                text: ''
            },
            subtitle: {
                text: ''
            },
            xAxis: {
                categories: [
                    'Jan',
                    'Feb',
                    'Mar',
                    'Apr',
                    'May',
                    'Jun',
                    'Jul',
                    'Aug',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dec'
                ],
                crosshair: true
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Number of Inspection Requests'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:14px">{point.key}</span><table style="border:none; margin:0;"><tr>',
                pointFormat: '<td style="color:{series.color};padding:5px; font-size:14px; text-align:center; border:none;">£ {point.y:.1f}' +
                    '<span style="display:block; color:#000; font-size:11px;">{series.name}</span></td>',
                footerFormat: '</tr></table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            exporting: {
                enabled: false
            },
            series: [{
                name: 'Inspection Assigned',
